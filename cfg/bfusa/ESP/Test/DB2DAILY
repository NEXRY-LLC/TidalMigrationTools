APPL DB2DAILY WAIT
NOTIFY ABEND FAILURE ALERT(REMD)
INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

UNIX_JOB DAILY_SAPBGD_BKUP
   AGENT CYBA_SAPBGD
   SCRIPTNAME /db2/db2bgd/Commvault_Backup_Scripts/DB2_CV_Backup.sh
   ARGS BGD INCREMENTAL
   USER db2bgd
   RUN DAILY
   DELAYSUB 18.00
ENDJOB

UNIX_JOB DAILY_SAPBGQ_BKUP
   AGENT CYBA_SAPBGQ
   SCRIPTNAME /db2/db2bgq/Commvault_Backup_Scripts/DB2_CV_Backup.sh
   ARGS BGQ INCREMENTAL
   USER db2bgq
   RUN DAILY
   DELAYSUB 18.00
ENDJOB

UNIX_JOB DAILY_SAPPOD_BKUP
   AGENT CYBA_SAPPOD
   SCRIPTNAME /db2/db2pod/Commvault_Backup_Scripts/DB2_CV_Backup.sh
   ARGS POD INCREMENTAL
   USER db2pod
   RUN DAILY
   DELAYSUB 18.00
ENDJOB

