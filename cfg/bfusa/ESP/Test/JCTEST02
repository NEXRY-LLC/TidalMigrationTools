APPL JCTEST02 WAIT NOPOST_WHILE_WAITING

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*THIS APPL IS TESTING RETURN CODE TRIGGERING                         /
/*11/22/2016-TESTING DATASET COMMAND TO RUN JCL FROM SPRJOBS          /
/*12/07/2016-TESTING ABANDON COMMAND TO READY JOB AT SPECIFIED TIME   /
/*********************************************************************/
/*YOU CAN USE THE PREREQ STATEMENT OR RELEASE WITH RC CHECKING
/*EITHER WILL WORK, BUT CHECK THE MANUAL, BECAUSE ONE MAY OVERIDE    */
/*THE OTHER.

NOTIFY FAILURE ABEND OVERDUE MAILBOX(SCHEDULERS)

TAG TEST

JOB JCTEST02.BEG LINK PROCESS HOLD
  RUN TODAY
  RELEASE ADD(SWESPJC2)
ENDJOB

JOB SWESPJC2
  CCCHK RC(1:3) FAIL CONTINUE
  CCCHK RC(5:11) FAIL CONTINUE
  CCCHK RC(13:4095) FAIL CONTINUE
  RUN TODAY
  DUEOUT EXEC REALNOW PLUS 1 MINUTES
  /*@@ RUN JOB SWESPJC2 FROM PROC61 ON DATES BELOW */
   IF TODAY('NOV 23 2016') THEN DATASET 'FTRF.SPRJOBS'
   IF TODAY('NOV 24 2016') THEN DATASET 'FTRF.SPRJOBS'
  /*@@ RUN JOB SWESPJC2 FROM PROC61 ON DATES ABOVE */
    IF ESPSHH = '16' THEN ABANDON DEPENDENCIES 4.30PM
 /*IF !MNPOINT = 'OVERDUE' THEN +
    IF ESPSHH = '12' THEN NOTIFY JOBEND MAILBOX(SCHEDULERS)
  RELEASE ADD(JCTEST00) COND(RC(0))
  RELEASE ADD(JCTEST04) COND(RC(4))
ENDJOB

JOB JCTEST00 LINK PROCESS
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN TODAY
  RELEASE ADD(JCTEST00.2) COND(RC(0))
ENDJOB

JOB JCTEST00.2 LINK PROCESS
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN TODAY
  RELEASE ADD(LIE.JCTEST02)
ENDJOB

JOB JCTEST04 LINK PROCESS
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN TODAY
  PREREQ (SWESPJC2) COND(RC(04))
  RELEASE ADD(JCTEST04.2)
ENDJOB

JOB JCTEST04.2 LINK PROCESS
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN TODAY
  RELEASE ADD(LIE.JCTEST02)
ENDJOB

JOB JCTEST12 LINK PROCESS
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN TODAY
  PREREQ (SWESPJC2) COND(RC(12))
  RELEASE ADD(JCTEST12.2)
ENDJOB

JOB JCTEST12.2 LINK PROCESS
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN TODAY
  PREREQ (JCTEST12) COND(RC(0))
  RELEASE ADD(LIE.JCTEST02)
ENDJOB

JOB LIE.JCTEST02 LINK PROCESS
  RUN TODAY
ENDJOB

