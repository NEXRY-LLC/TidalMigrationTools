AGENTNAME = ''
IF !USER1 = '' THEN !AGENTNAME = 'CYBB_BFT030'
IF !USER1 = 'BFP' THEN !AGENTNAME = 'CYBB_BFP030'
IF !USER1 = 'BFT' THEN !AGENTNAME = 'CYBB_BFT030'
IF !USER1 = 'BFG' THEN !AGENTNAME = 'CYBB_BFG030'
IF !USER1 = 'IZP' THEN !AGENTNAME = 'SAP_IZP100'
IF !USER1 = 'BZP' THEN !AGENTNAME = 'SAP_BZP100'
IF !USER1 = 'BFM' THEN !AGENTNAME = 'CYBB_BFM030'

/*ENTER YOUR USER NAME IN USER2 PARAMETER FOR SPOOLFILE EMAIL


JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(Z_TEST_1_!AGENTNAME)
   RELEASE ADD(Z_TEST_2_!AGENTNAME)
ENDJOB


SAP_JOB Z_TEST_1_!AGENTNAME HOLD
   AGENT !AGENTNAME
   SAPJOBNAME Z_TEST_1_!AGENTNAME
   SAPJOBCLASS C
   ABAPNAME RSUSR000
 /*STEPUSER SAPADM
   STEPUSER S_BC_CYBERM
   RECIPIENTTYPE DLI
   /*SPECIFIES SAPOFFICE DISTRIBUTION LIST AS THE RECIPIENT TYPE*/
   SPOOLRECIPIENT SCHEDULING
   LANGUAGE E
   PRINTDEST LGTP /*LOCAL TEXT PRINTING*/
 /*PRINTDEST TRSH /*TRASH PRINTER ON IZP*/
 /*PRINTDEST EPDF /*PDF PRINTER ON BFP*/
 /*PRINTDEST FILE -/*DIDN'T DO ANYTHING
   PRINTIMMED YES
   PRINTCOPIES 001
   PRINTREL NO
   EXPIRATION 9
   LINES 58
   COLUMNS 144
   BANNER D
   ARCMODE PRINT
   RUN TODAY
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

SAP_JOB Z_TEST_2_!AGENTNAME HOLD
   AGENT !AGENTNAME
   SAPJOBNAME Z_TEST_2_!AGENTNAME
   SAPJOBCLASS C
   ABAPNAME RSUSR000
   STEPUSER SAPADM
   PRINTDEST EPDF
 /*PRINTDEST FILE
   RECIPIENTTYPE MAIL
   SAPEMAILADDR !USER2.@BFUSA.COM
   LANGUAGE E
   PRINTIMMED YES
   PRINTCOPIES 001
   PRINTREL YES
   EXPIRATION 9
   LINES 58
   COLUMNS 132
   BANNER D
   ARCMODE PRINT
   RUN TODAY
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB


JOB LIE.!ESPAPPL LINK PROCESS
   RUN DAILY
ENDJOB


