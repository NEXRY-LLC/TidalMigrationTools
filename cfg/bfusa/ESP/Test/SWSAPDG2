/*NOTIFY ABEND FAILURE ALERT(REMD)*/
INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*JOB LIS.SWSAPTST LINK PROCESS
   /*RUN DAILY
   /*RELDELAY 120
   /*RELEASE ADD(Z_TEST_CYBERMATION_BFT030)
/*ENDJOB

SAP_JOB Z_TEST_CYBERMATION_BFT030
   AGENT CYBB_BFT030
   SAPJOBNAME Z_TEST_CYBERMATION
   SAPJOBCLASS A
   STARTMODE ASAP
   RECIPIENTTYPE INT
   SPOOLRECIPIENT grimmettdavi@bfusa.com
   ABAPNAME RSUSR000
   STEPUSER SAPADM
   ARCMODE PRINT
   LINES 50
   PRINTNEWSPOOL YES
   RECIPIENTCC NO
   RECIPIENTBCC NO
   RUN TODAY
   EARLYSUB 08.00
   /*RELDELAY 120
   /*IF ESPSMN = '00' THEN RUN TODAY
   /*IF ESPSMN = '30' THEN RUN TODAY
ENDJOB

SAP_JOB Z_TEST_CYBERMATION_BFT030_2
   AGENT CYBB_BFT030
   SAPJOBNAME Z_TEST_CYBERMATION_2
   SAPJOBCLASS A
   STARTMODE IMMEDIATE
   ABAPNAME RSUSR000
   STEPUSER SAPADM
   ARCMODE PRINT
   LINES 50
   PRINTNEWSPOOL YES
   SPOOLRECIPIENT grimmettdavi@bfusa.com
   RECIPIENTTYPE INT
   RECIPIENTCC NO
   RECIPIENTBCC NO
   RUN TODAY
   DELAYSUB 8.00
   /*IF ESPSMN = '15' THEN RUN TODAY
   /*IF ESPSMN = '45' THEN RUN TODAY
ENDJOB

