APPL DGTSTSAP WAIT

INVOKE 'SWS.ESP.APPL.TESTLIB(#DISTRIB)'

/*********************************************************************/
/*12/09/2016 -JFC- APPL TO TEST ESP AND SM36 ON SAP                  */
/*********************************************************************/

AGENTNAME = ''
IF !USER1 = '' THEN !AGENTNAME = 'CYBB_BFT030'
IF !USER1 = 'BFP' THEN !AGENTNAME = 'CYBB_BFP030'
IF !USER1 = 'BFT' THEN !AGENTNAME = 'CYBB_BFT030'
IF !USER1 = 'BFG' THEN !AGENTNAME = 'CYBB_BFG030'
IF !USER1 = 'IZP' THEN !AGENTNAME = 'SAP_IZP100'
IF !USER1 = 'BZP' THEN !AGENTNAME = 'SAP_BZP100'

/*ENTER YOUR USER NAME IN USER2 PARAMETER FOR SPOOLFILE EMAIL


JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(Z_TEST_1_!AGENTNAME)
   RELEASE ADD(Z_TEST_2_!AGENTNAME)
ENDJOB


SAP_JOB Z_TEST_1_!AGENTNAME HOLD
   AGENT !AGENTNAME
   SAPJOBNAME Z_TEST_1_!AGENTNAME
   SAPJOBCLASS C
   ABAPNAME RSUSR000
   STEPUSER FSBP_BATCH
   RECIPIENTTYPE INT
   SPOOLRECIPIENT !USER2
   RECIPIENT !USER2
   LANGUAGE E
   PRINTDEST EPDF
   PRINTIMMED YES
   PRINTCOPIES 001
   PRINTREL NO
   EXPIRATION 9
   LINES 58
   COLUMNS 144
   BANNER D
   ARCMODE PRINT
   RUN TODAY
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

SAP_JOB Z_TEST_2_!AGENTNAME HOLD
   AGENT !AGENTNAME
   SAPJOBNAME Z_TEST_2_!AGENTNAME
   SAPJOBCLASS C
   ABAPNAME RSUSR000
   STEPUSER FSBP_BATCH
   RECIPIENTTYPE MAIL
   SAPEMAILADDR !USER2.@BFUSA.COM
   RECIPIENT !USER2
   LANGUAGE E
   PRINTIMMED YES
   PRINTCOPIES 001
   PRINTREL YES
   EXPIRATION 9
   LINES 58
   COLUMNS 132
   BANNER D
   ARCMODE PRINT
   RUN TODAY
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB


JOB LIE.!ESPAPPL LINK PROCESS
   RUN DAILY
ENDJOB


