APPL JCTEST21 WAIT NOPOST_WHILE_WAITING

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*    THIS IS A TEST OF THE ESP SCHEDULING SYSTEM                    */
/*********************************************************************/
/* TESTING FILE TRIGGERS                                             */
/*********************************************************************/

/*NOTIFY FAILURE ABEND OVERDUE MAILBOX(COSTELLOJOHN)
TAG TEST

FILE_TRIGGER FILE_JCTEST21_CREATED conditional
  AGENT APPCYB02PPD
  USER maestro
  FILENAME \\APPCYB02PPD\ESP$\esp_test\JCTEST21.txt CREATE
  RUN TODAY
  RELEASE ADD(PROCESS_FILE)
ENDJOB

JOB PROCESS_FILE LINK PROCESS conditional
  RUN TODAY
   ABANDON SUBMISSION 08.30
   ABANDON DEPENDENCIES 08.31
  RELEASE DROP(FILE_JCTEST21_DID_NOT_GET_CREATED)
  RELEASE ADD(CONTINUE_PROCESSING) COND(RC(0))
ENDJOB

FILE_TRIGGER FILE_JCTEST21_DID_NOT_GET_CREATED conditional
  AGENT APPCYB02PPD
  USER maestro
  FILENAME \\APPCYB02PPD\ESP$\esp_test\JCTEST21.txt NOTEXIST
  RUN TODAY
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB CONTINUE_PROCESSING LINK PROCESS
  RUN TODAY
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
  RUN TODAY
ENDJOB

