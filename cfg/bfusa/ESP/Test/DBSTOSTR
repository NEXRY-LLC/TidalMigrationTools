APPL DBSTOSTR WAIT
INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

UNIX_JOB BFPSTOPD.SAPBFPDB HOLD
    AGENT CYBA_SAPBFPDB
    SCRIPTNAME /local/bin/stop_db2.sh
    ARGS BFP
    USER root
    RUN SUN
    RELEASE ADD(BFPSTRTD.SAPBFPDB)
 ENDJOB

UNIX_JOB BFPSTRTD.SAPBFPDB HOLD
   AGENT CYBA_SAPBFPDB
   SCRIPTNAME /local/bin/start_db2.sh
   ARGS BFP
   USER root
   RUN SUN
ENDJOB

