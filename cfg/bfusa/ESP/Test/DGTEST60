APPL DGTEST60 JOB_ANCESTOR_WAIT

/* NOTIFY OVERDUE MAILBOX(DGRIMMETT1) */

JCLLIB 'FTRF.PRDJOBS'
COPYJCL 'SWS.ESP.COPYLIB'
TEMPLIB 'SWS.ESP.TEMPLIB'
DOCLIB 'SWS.ESP.DOCLIB'

IF !ESPAPSUB# > 1 THEN JCLLIB 'SWS.ESP.COPYLIB'

OPTIONS RESTARTSTEP

JOB TEST1.!ESPAPPL LINK PROCESS HOLD
   RUN TODAY
   DELAYSUB 12:25
   RELEASE ADD(TEST2.!ESPAPPL)
ENDJOB

JOB TEST2.!ESPAPPL LINK PROCESS
   RUN TODAY
   RELDELAY 10
   DUEOUT EXEC 12:27
   NOTIFY OVERDUE MAILBOX(DGRIMMETT1)
   IF ESPATIME GE '12.35.00' AND ESPATIME LT '12.45.00' THEN +
      NOTIFY END MAILBOX(DGRIMMETT1)
ENDJOB

