APPL LEI5550A WAIT
INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'
NOTIFY ABEND FAILURE ALERT(REMD)
NOTIFY OVERDUE MAILBOX(AKRONJOBREQ)

/**********************************************************************/
/*CREATED ON 8/10/17 PER YOGESH AGARWAL - DSG - INC000001383104       */
/**********************************************************************/
/*THIS APPL USES A TEMPLATE TO REPLICATE THE JOB                      */
/***MULTIRUN NUMBERS REPRESENT DELAYSUB TIMES FOR EACH JOB          ***/
/**********************************************************************/
/* JOBS REPROCESS 'INT99', '49_LOC', AND 'NGJ' FILES                  */
/**********************************************************************/

TEMPLATE MULTIRUN (1,OFFSET NEXT() RUN())
  SAP_JOB RSXMB_RESTART_MESSAGES_INT99_!OFFSET
     AGENT CYBB_BFP030
     SAPJOBNAME RSXMB_RESTART_MESSAGES_INT99
     SAPJOBCLASS C
     STARTMODE ASAP
     ABAPNAME RSXMB_RESTART_MESSAGES
     VARIANT /IN99
     SAPEMAILADDR 'FUJITSUSAPLE@BFUSA.COM'
     STEPUSER S_BC_CYBERM
     LANGUAGE E
     PRINTCOPIES 001
     PRINTREL YES
     EXPIRATION 8
     LINES 65
     COLUMNS 132
     BANNER D
     RECIPIENT S_BC_CYBERM
     ARCMODE PRINT
     RUN !RUN
     DELAYSUB !OFFSET
     RELEASE ADD(!NEXT)
  ENDJOB
ENDTEMPL

