APPL JCTEST1B WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/**********************************************************************/
/* TESTING IN THIS APPL:                                              */
/* - TAGS                                                             */
/* - RUN STATEMENTS USING THE PARAMETERS                              */
/* - NOTIFY JOB USING EVENT AND THE 4 PARAMETERS                      */
/**********************************************************************/

/*NOTIFY FAILURE ABEND END MAILBOX(SCHEDULERS)

JOB LIS.!ESPAPPL LINK PROCESS
  RUN TODAY
  RELEASE ADD(JCTESTCC)
ENDJOB

JOB JCTESTCC
  RUN TODAY
  DATASET 'FTRF.TSTJOBS'
  RELEASE ADD(JOBCC000) COND(RC(0))
  RELEASE ADD(JOBCC001) COND(RC(1))
ENDJOB

JOB JOBCC001 LINK PROCESS CONDITIONAL
  RUN TODAY
  RELEASE ADD(CANCEL00)
ENDJOB

JOB CANCEL00 LINK PROCESS
  RUN TODAY
  ESP AJ DATASET COMPLETE APPL(!ESPAPPL..!ESPAPGEN)
  ESP AJ JOBCC000 COMPLETE APPL(!ESPAPPL..!ESPAPGEN)
  ESP AJ SWESPJC2 COMPLETE APPL(!ESPAPPL..!ESPAPGEN)
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

DSTRIG DATASET
  DSNAME 'TSO5964.TRIGGER.APPL.JCTEST1B'
  RUN TODAY
  RELEASE ADD(JOBCC000) COND(RC(0))
ENDJOB

JOB JOBCC000 LINK PROCESS CONDITIONAL
  RUN TODAY
  RELEASE ADD(SWESPJC2)
ENDJOB

JOB SWESPJC2
  RUN TODAY
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN DAILY
ENDJOB

