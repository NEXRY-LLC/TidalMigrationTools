APPL JCTEST48 WAIT NOPOST_WHILE_WAITING

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*****************************************************/
/*****************************************************/
/*- TEST OF REEXEC COMMAND
/*****************************************************/

TAG TEST

JOB SWESPJC2
  CCCHK RC(1:4095) FAIL CONTINUE
  /*DATASET 'FTRF.TSTJOBS'
  RUN TODAY
  RELDELAY 1
ENDJOB

JOB REEXEC01 CONDITIONAL LINK PROCESS
  ESP AJ SWESPJC2.2 INSERT APPL(!ESPAPPL..0)
  ESP AJ CMPLTJOB INSERT APPL(!ESPAPPL..0)
  RELEASE ADD(TRIGNEW1.!ESPAPPL)
  PREREQ (SWESPJC2(A))
ENDJOB

JOB CMPLTJOB CONDITIONAL LINK PROCESS
  ESP AJ SWESPJC2 COMPLETE APPL(!ESPAPPL..0)
  ESP AJ SWESPJC2.2 COMPLETE APPL(!ESPAPPL..0)
  PREREQ (SWESPJC2.2)
  RELEASE ADD(TRIGNEW1.!ESPAPPL)
ENDJOB

APPLEND TRIGNEW1.!ESPAPPL
  ESPNOMSG TRIGGER !ESPEVENT ADD
ENDJOB

