APPL CFBAOPL1 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/**********************************************************************/
/*                 NOTES AND COMMENTS                                 */
/**********************************************************************/
/* CREATED 09/21/2017 - JFC                                           */
/**********************************************************************/
/* -THIS IS TO TEST SENDING THE LATE PAYMENT CYCLE DAY AS A PARAMETER */
/* The endpoint will most likely be the following with a form parameter
/* for cycleDay as an integer.
/* /notification/postLatePayFeeJobCompletion                          */
/********************************************************************/
/*  OK - SINCE WE ARE USING PARAMETERS 1,3 AND 4 FOR ALL THE OTHER  */
/* CFBAOP APPLICATIONS, WE SHOULD USE USER PARAMETER 2 FOR THIS     */
/* LPF CYCLE DATE.                                                  */

/**********  HOW THIS WILL WORK        ******************************/
/* WE'LL USE PARAMETER 2 TO INPUT THE LPF DATE INTO ANOTHER APPL    */
/* WE'LL PULL THAT DATA FROM THE CURRENT RT950B** LPF JOBS           */
/* THEN CREATE NEW JOBS THAT WILL DETERMINE THE LPF DATE AND TRIGGER*/
/* A NEW EVENT USING THAT NUMBER.  IT WILL BE EASY.

JOB CFBAOPL1.START LINK PROCESS
  RUN REF RT950B05
  RUN REF RT950B08
  RUN REF RT950B10
  RUN REF RT950B13
  RUN REF RT950B15
  RUN REF RT950B18
  RUN REF RT950B20
  RUN REF RT950B23
  RUN REF RT950B25
  RUN REF RT950B27
  RELEASE ADD(RT950B05)
  RELEASE ADD(RT950B08)
  RELEASE ADD(RT950B10)
  RELEASE ADD(RT950B13)
  RELEASE ADD(RT950B15)
  RELEASE ADD(RT950B18)
  RELEASE ADD(RT950B20)
  RELEASE ADD(RT950B23)
  RELEASE ADD(RT950B25)
  RELEASE ADD(RT950B27)
ENDJOB

/**********  SET THE JOBS FOR CYCLE 05          ********************/

JOB RT950B05 EXTERNAL
  INVOKE 'SWS.ESP.APPL.PROCLIB(#RTLPF05)'
  RELEASE ADD(LPFCYCLE.05)
ENDJOB

JOB LPFCYCLE.05 LINK PROCESS
  RUN REF RT950B05
  DELAYSUB 07.00
  ESP TR CF01.CFBAOPL2 USER2(05)
  RELEASE ADD(CFBAOPL1.END)
ENDJOB

/**********  SET THE JOBS FOR CYCLE 08          ********************/

JOB RT950B08 EXTERNAL
  INVOKE 'SWS.ESP.APPL.PROCLIB(#RTLPF08)'
