APPL BPMFI004 WAIT
NOTIFY ABEND FAILURE ALERT(REMD)
INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/* APPL WILL SCHEDULE IN AT 00.10 ON 3RD WORKDAY OF MONTH AND WAIT FOR
/* THE CREATION OF TEXT FILE Z_CUSTOMER_STATEMENT.TXT INDICATING THAT
/* MONTHLY CLOSING PERIOD HAS COMPLETED.

/* WHEN TEXT FILE IS CREATED ON BZP100,THE FILE TRIGGER JOB IN     
/* BPMFI004 WILL EXECUTE AND RELEASE CUSTOMER PRINT JOBS FOR  
/* CANADA AND DOMESTIC US.        
/*
/* LINK JOB WILL SUSPEND EVENT FSBP.BPDFI003.                   
/*

FILE_TRIGGER FSBP_Z_CUSTOMER_STATEMENT_TXTFILE_CREATED
   AGENT SAP_BZP100
   FILENAME '/xfer/outbound/fsbpecc/Z_CUSTOMER_STATEMENT.TXT' CREATE +
NOCHANGE(1)
   RUN 2ND WORKDAY OF MONTH
   RELEASE ADD(FSBP_CSTMT_PRINT_DELETE_SFILE)
ENDJOB

SAP_JOB FSBP_CSTMT_PRINT_DELETE_SFILE
   AGENT SAP_BZP100
   SAPJOBNAME CSTMT_PRINT_DELETE_SFILE
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZCA_FILE_UTILITY
   VARIANT CSTM_JFILE
   STEPUSER FSBP_BATCH
   LANGUAGE E
   PRINTSPOOLNAME ZCA_FILE_UTI
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   PRINTCOPIES 001
   RUN 2ND WORKDAY OF MONTH
   RELEASE ADD(FSBP_CSTMT_PRINT_CANADA)
ENDJOB

SAP_JOB FSBP_CSTMT_PRINT_CANADA
   AGENT SAP_BZP100
   SAPJOBNAME CSTMT_PRINT_CANADA
   SAPJOBCLASS C
   PRINTCOPIES 001
   STARTMODE ASAP
   ABAPNAME ZFIF_CUSTOMER_STATEMENT
   VARIANT /CANADA
   STEPUSER FSBP_BATCH
   LANGUAGE E
   PRINTSPOOLNAME ZFIF_CUSTOME
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 140
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT FSBP_BATCH
   ARCMODE PRINT
   RUN 2ND WORKDAY OF MONTH
   NOTIFY JOBEND MAILBOX(BPIPCUST)
   RELEASE ADD(FSBP_CSTMT_PRINT_DOMESTIC)
ENDJOB

SAP_JOB FSBP_CSTMT_PRINT_DOMESTIC
   AGENT SAP_BZP100
   SAPJOBNAME CSTMT_PRINT_DOMESTIC
   SAPJOBCLASS C
   PRINTCOPIES 001
   STARTMODE ASAP
   ABAPNAME ZFIF_CUSTOMER_STATEMENT
   VARIANT /DOMESTIC
   STEPUSER FSBP_BATCH
   LANGUAGE E
   PRINTSPOOLNAME ZFIF_CUSTOME
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 140
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT FSBP_BATCH
   ARCMODE PRINT
   RUN 2ND WORKDAY OF MONTH
   NOTIFY JOBEND MAILBOX(BPIPCUST)
   RELEASE ADD(SUSPEND_BPDFI003)
ENDJOB

JOB SUSPEND_BPDFI003 LINK PROCESS
   RUN 2ND WORKDAY OF MONTH
   ESP SUSPEND FSBP.BPDFI003
ENDJOB


