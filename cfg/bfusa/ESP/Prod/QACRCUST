NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND MAILBOX(QAFAIL)
TAG PPIW

NT_JOB ITEM_MASTER_CRCMD EXTERNAL APPLID(QACRITEM)
  RUN WED FRI
  RELEASE ADD(LIS.QACRCUST)
ENDJOB

JOB LIS.QACRCUST LINK PROCESS
  RUN WED FRI
  EARLYSUB 12.10
  RELEASE ADD(DTS_CONTROL_CUSTOMER_MASTER_CR)
ENDJOB

NT_JOB DTS_CONTROL_CUSTOMER_MASTER_CR
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\dts_control_customer_master_cr.cmd
  ARGS 6
  USER maestro
  RUN WED FRI
  RELEASE ADD(CUSTOMER_MASTER_CRCMD)
ENDJOB

