  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\customer_master_cr_checks.cmd
  ARGS
  USER maestro
  RUN WED FRI
  RELEASE ADD(CUSTOMER_MASTER_CR_DELETED_CHECKS)
ENDJOB

