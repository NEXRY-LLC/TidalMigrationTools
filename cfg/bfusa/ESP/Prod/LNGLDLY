APPL LNGLDLY WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*02/28/2019 -JFC- CLEANED UP PROC - ADDED LIE - NO OTHER CHANGES    */
/*********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)

SCHD001 = 'YESTERDAY'
IF !USER2 = 001 OR !USER2 = '' THEN SCHD001 = 'TODAY'

JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(LNGLDLY)
ENDJOB

JOB LNGLDLY
  /*@@ SYSTEM=LAWSON
  /*@@ JOBNET=IEBGENER
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN !SCHD001
  RELEASE ADD(BEEZ520J)
ENDJOB

JOB BEEZ520J
  /*@@ SYSTEM=JDA
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN !SCHD001
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
  RUN DAILY
ENDJOB

