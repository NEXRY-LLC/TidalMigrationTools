APPL FXMCHNG1 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

NOTIFY ABEND FAILURE ALERT(REMD)

FILE_TRIGGER MNTHLY_REUTERS_TRANSFER_FOREIGN_EXCHNG_RATE_TYPE_ZC
   AGENT CYBB_BFP030
   FILENAME +
'/data/BFP/interfaces/input/datain/RFTBFF00_Reuters_FX_Rates_ZC.txt' +
CREATE NOCHANGE(1)
   RUN LAST WORKDAY OF MONTH
   RELEASE ADD(RFTBFF00_REUTERS_FX_RATES_ZC)
ENDJOB

SAP_JOB RFTBFF00_REUTERS_FX_RATES_ZC
   AGENT CYBB_BFP030
   SAPJOBNAME RFTBFF00_REUTERS_FX_RATES_ZC
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME RFTBFF00
   VARIANT REUTERS_ZC
   STEPUSER SAPADM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTREL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   BANNER D
   RECIPIENT SAPADM
   ARCMODE PRINT
   RUN LAST WORKDAY OF MONTH
   IF TODAY('JUN 29 2018') THEN JOBATTR HOLD
   RELEASE ADD(ARCHIVE_RFTBFF00_REUTERS_FX_RATES_ZC)
ENDJOB

UNIX_JOB ARCHIVE_RFTBFF00_REUTERS_FX_RATES_ZC
   AGENT CYBA_ISBFP3
   SCRIPTNAME /local/bin/arcfile.sh
   ARGS interfaces/input/datain/RFTBFF00_Reuters_FX_Rates_ZC.txt M
   USER bfpadm
   RUN LAST WORKDAY OF MONTH
ENDJOB


