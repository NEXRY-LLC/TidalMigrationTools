OPTIONS NODUEOUTPROPAGATION

FILE_TRIGGER BSRO_FILE_PO_HEADER_COMPLETE
   AGENT LNX_DSRSAP01PAKR
   FILENAME '/mnt/bods/bsro/prod/outbound/+
jda_analy_pmghdr_*.dat*' CREATE NOCHANGE(1)
   RUN DAILY
   RELEASE ADD(DS_JDA_PO_HEADER)
ENDJOB

LINUX_JOB DS_JDA_PO_HEADER
    AGENT LNX_DSRSAP01PAKR
    USER bodsadmin
    SCRIPTNAME /opt/ds_install/dataservices/JOB_scripts/+
    JOB_JDA_PO_HEADER.sh
    NOTIFY ABEND FAILURE ALERT(ADW1) MAILBOX(DGRIMMETT1)
    NOTIFY OVERDUE MAILBOX(DSJOBNOTIFY)
    DUEOUT EXEC 6AM
    RUN DAILY
    RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

