APPL EBSAPI01 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*12/02/2020 -ANK- SAP STATEMENTS RPD PROCESS PER MARK - INC0010729
/*********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMP)
NOTIFY OVERDUE ALERT(LATE)


JOB LIS.!ESPAPPL LINK PROCESS
 RELDELAY 1
 RUN TODAY
 RELEASE ADD(EBSAPI01_INV_DOM_FT)
 RELEASE ADD(EBSAPI01_INV_CAN_FT)
ENDJOB

FILE_TRIGGER EBSAPI01_INV_DOM_FT
 AGENT APPPLS02PAKR
 FILENAME 'D:\APPS\SAP\FILETRIGGER\RPD_INV_DOM.txt' CREATE
 RUN TODAY
 RELEASE ADD(EBSAPI01_INV_RPD)
ENDJOB

FILE_TRIGGER EBSAPI01_INV_CAN_FT
 AGENT APPPLS02PAKR
 FILENAME 'D:\APPS\SAP\FILETRIGGER\RPD_INV_CAN.txt' CREATE
 RUN TODAY
 RELEASE ADD(EBSAPI01_INV_RPD)
ENDJOB

NT_JOB EBSAPI01_INV_RPD
    AGENT APPPLS01PAKR
    USER bsprintuser
    CMDNAME E:\APPS\SAP\START\EBSAPINV_RPD.BAT
    ENVAR STDOUT=E:\APPS\SAP\REPORTFILES\EBSAPINV_RPD.TXT
    RUN TODAY
    RELEASE ADD(FOURHOURDELAY.!ESPAPPL)
ENDJOB

JOB FOURHOURDELAY.!ESPAPPL LINK PROCESS
    RELDELAY 120
    RELEASE ADD(EBSAPI01_ZIPSEND_BAT)
    RUN TODAY
ENDJOB

NT_JOB EBSAPI01_ZIPSEND_BAT
    AGENT APPPLS02PAKR
    USER bsprintuser
    CMDNAME D:\APPS\SAP\START\EBSAPINV_ZIPANDSEND.BAT
    ENVAR STDOUT=D:\APPS\SAP\REPORTFILES\EBSAPINV_ZIPANDSEND.TXT
    RUN TODAY
    RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
    RUN TODAY
    RELDELAY 5
ENDJOB

APPLEND TRIGNEW1.!ESPAPPL
   ESPNOMSG TRIGGER !ESPEVENT ADD
ENDJOB
