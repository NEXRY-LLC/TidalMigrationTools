APPL QACRSHIP WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/**********************************************************************/
/* 12/01/2016 -JFC- REMOVED CDC1 CONNECT DIRECT JOBS PER J. HRITZ     */
/**********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND MAILBOX(QAFAIL)
NOTIFY OVERDUE MAILBOX(SQLSHAREDSERVICES)
TAG PPIW

NT_JOB PRODUCTION_CR_CHECKS EXTERNAL APPLID(QACRPROD)
  RUN 2ND WORKDAY OF MONTH
  RELEASE ADD(LIS.QACRSHIP)
ENDJOB

JOB LIS.QACRSHIP LINK PROCESS
  RUN 2ND WORKDAY OF MONTH
  DELAYSUB 10.00
  RELEASE ADD(DTS_CONTROL_SHIPMENTS_CR)
ENDJOB

NT_JOB DTS_CONTROL_SHIPMENTS_CR
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\dts_control_shipments_CR.cmd
  ARGS 6
  USER maestro
  RUN 2ND WORKDAY OF MONTH
  RELEASE ADD(SHIPMENTS_CRCMD)
ENDJOB

NT_JOB SHIPMENTS_CRCMD
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\shipments_CR.cmd
  ARGS 5
  USER maestro
  RUN 2ND WORKDAY OF MONTH
  RELEASE ADD(SHIPMENTS_CR_CHECKS)
ENDJOB

NT_JOB SHIPMENTS_CR_CHECKS
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\shipments_CR_checks.cmd
  ARGS 5
  USER maestro
  RUN 2ND WORKDAY OF MONTH
  RELEASE ADD(LIE.QACRSHIP)
ENDJOB

JOB LIE.QACRSHIP LINK PROCESS
  RUN 2ND WORKDAY OF MONTH
  DUEOUT EXEC 16:00
ENDJOB

