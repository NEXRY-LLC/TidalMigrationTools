APPL QABRITEM WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'
NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND MAILBOX(QAFAIL)
TAG PPIW

/*RELOADS ITEM MASTER BR TABLE*/

JOB LIS.QABRITEM LINK PROCESS
   RUN WED FRI
   EARLYSUB 11.20
   RELEASE ADD(DTS_CONTROL_ITEM_MASTER_BRCMD)
ENDJOB

NT_JOB DTS_CONTROL_ITEM_MASTER_BRCMD
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\dts_control_item_master_BR.cmd
   ARGS 6
   USER maestro
   RUN WED FRI
   RELEASE ADD(ITEM_MASTER_BRCMD)
ENDJOB

NT_JOB ITEM_MASTER_BRCMD
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\item_master_BR.cmd
   ARGS 6
   USER maestro
   RUN WED FRI
   RELEASE ADD(LIE.QABRITEM)
ENDJOB

JOB LIE.QABRITEM LINK PROCESS
   RUN WED FRI
ENDJOB

