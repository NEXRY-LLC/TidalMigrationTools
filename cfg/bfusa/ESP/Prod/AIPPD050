APPL AIPPD050 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/* 05/05/2016 -JFC- UPDATED PROC NOTES SECTION
/* 06/28/2016 -JFC- CHANGED PRINTDEST FROM DZ01
/* 07/23/2018 -JFC- CHANGED ARCHIVE FOLDER FROM W TO D
/* 02/14/2019 -JFC- REMOVED ALERT AI03 PER INC000001852710
/* 02/24/2020 -JFC- UPDATED AGENT FROM R7 TO R11.5.0
/*                - CHANGED JOBQ FROM CYBESPV210.CYBESPV2100
/* 03/05/2020 -DSG- ADDED RESOURCE TO AS400 JOBS - INC000002178387
/* 07/11/2022 -VV - Changed sub on CD job - PRB0041154
/*********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)

JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
    IF ESPSHH = '01' THEN DELAYSUB 03.30
    IF ESPSHH = '06' THEN DELAYSUB 08.30
   RELEASE ADD(F181RMGI.AKNITS)
ENDJOB

DATA_OBJECT PARMSET.!ESPAPPL
    /*Create a timestamp in hhmmMMDDYY format*/
    SETVAR TMSTMP='!ESPSHH.:!ESPSMN.,!ESPSMM./!ESPSDD./!ESPSYY'
    SETVAR PID=''
    SETVAR STMPTM='!ESPSMM./!ESPSDD./!ESPSYY.,!ESPSHH.:!ESPSMN'
ENDJOB

JOB SETPID.!ESPAPPL LINK PROCESS
    /*get the next PID number from the ConnectDirect*/
    /*Process ID table (CDPROD).  Save the value into*/
    /*the applications DataObject for use by the C:D*/
    /*job and the CDSTAT job (if needed).*/
    VINCR (PID) TABLE(CDPROD) CLANG
    VGET  (PID) TABLE(CDPROD) CLANG
    ESP MGRMSG * . . . PARMSET.!ESPAPPL/!ESPAPPL..!ESPAPGEN/MAIN +
ACTION SET PID(!PID)
    RUN DAILY
    RELEASE ADD(RAW_MATERIAL_CONSUMPTION_FOR_F181CD)
ENDJOB

AS400_JOB F181RMGI.AKNITS
  RESOURCE ADD(1,AKNITS)
   AGENT AKNITS
   COMMAND CYBROBOT F181RMG1
   JOBQ CAWAAGENT.CYBESPJOBS
   RUN DAILY
   RELEASE ADD(RAW_MATERIAL_CONSUMPTION_FOR_F181CD)
ENDJOB

UNIX_JOB RAW_MATERIAL_CONSUMPTION_FOR_F181CD
   AGENT CYBA_ISBFP3
   PID= WOBDATA('PARMSET.!ESPAPPL','PID')
   TMSTMP= WOBDATA('PARMSET.!ESPAPPL','TMSTMP')
   SCRIPTNAME /apps/condir/bfsbin/submitcd.sh
   ARGS raw_material_consumption_for_f181.cd 5 !PID !TMSTMP
   RESOURCE ADD(1,ISBFP3CD)
   USER cdprod
   IF TODAY('MON') AND ESPSHH = '01' THEN +
   EARLYSUB REALNOW PLUS 5 MIN
   ELSE +
   EARLYSUB REALNOW PLUS 20 SECONDS
   RUN DAILY
   RELEASE ADD(CDSTAT.RAW_MATERIAL_CONSUMPTION_FOR_F181CD(A))
   RELEASE ADD(ZMMIMI04_F181_RM_GI)
ENDJOB

AIX_JOB CDSTAT.RAW_MATERIAL_CONSUMPTION_FOR_F181CD CONDITIONAL
   AGENT CYBA_ISBFP3
   /*This job only runs if the C:D job does not end with*/
   /*a EXITCODE of 0.  It can be rerun as often as*/
   /*required to check the status of the C:D process.*/
   /*When the C:D process finishes, complete the job*/
   /*to release the successors.*/
   USER cduser
   STMPTM= WOBDATA('PARMSET.!ESPAPPL','STMPTM')
   PID= WOBDATA('PARMSET.!ESPAPPL','PID')
   CMDNAME /apps/condir/bfsbin/cdstat.sh
   ARGS !STMPTM  j!PID
   RUN DAILY
ENDJOB

SAP_JOB ZMMIMI04_F181_RM_GI
    SAPUSER SAPADM
    AGENT CYBB_BFP030
    SAPJOBNAME ZMMIMI04_F181_RM_GI
    SAPJOBCLASS C
    ABAPNAME ZMMIMI04
    VARIANT 'VARIANT F181'
    LANGUAGE E
    PRINTDEST C-AI
    PRINTCOPIES 001
    PRINTIMMED YES
    EXPIRATION 8
    COLUMNS 132
    BANNER D
    RECIPIENT DUETTAD
    ARCMODE PRINT
    RUN DAILY
    RELEASE ADD(F181RMD1)
ENDJOB

AS400_JOB F181RMD1
  RESOURCE ADD(1,AKNITS)
    AGENT AKNITS
    COMMAND CYBROBOT F181RMD1
    JOBQ CAWAAGENT.CYBESPJOBS
    RUN DAILY
    RELEASE ADD(AR_F181_RM_GI)
ENDJOB

UNIX_JOB AR_F181_RM_GI
    AGENT CYBA_ISBFP3
    SCRIPTNAME /local/bin/arcfile.sh
    ARGS interfaces/input/datain/f181_rm_gi D
    USER bfpadm
    RUN DAILY
    RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

AIX_JOB LIE.!ESPAPPL
    AGENT CYBA_ISBFP3
    COMMAND /bin/sleep
    ARGS 3
    USER bfpadm
    RUN DAILY
    IF ESPSHH = '01' THEN DUEOUT EXEC 05.00
    IF ESPSHH = '06' THEN DUEOUT EXEC 10.30
    NOTIFY OVERDUE MAILBOX(AKRONJOBREQ)
ENDJOB

