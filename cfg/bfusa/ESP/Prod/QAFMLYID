APPL QAFMLYID WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND OVERDUE MAILBOX(QAFAIL)
TAG PPIW
CRITPATH ON

NT_JOB VMSDOTCMD EXTERNAL APPLID(QAVMSDOT)
  RUN SUN
  RELEASE ADD(LIS.QAFMLYID)
ENDJOB

NT_JOB WHSE_XREF_CHECKSCMD EXTERNAL APPLID(QAWHSECK)
   RUN SUN
   RELEASE ADD(LIS.QAFMLYID)
ENDJOB

NT_JOB ITEM_MASTER_CHECKSCMD EXTERNAL APPLID(QAITMMST)
   RUN SUN
   RELEASE ADD(LIS.QAFMLYID)
ENDJOB

JOB LIS.QAFMLYID LINK PROCESS
   RUN SUN
   DELAYSUB 01.00
   RELEASE ADD(FAMILY_ID_PROCESSCMD)
ENDJOB

NT_JOB FAMILY_ID_PROCESSCMD
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\family_id_process.cmd
   ARGS
   USER maestro
   RUN SUN
   DUEOUT EXEC 6AM
   RELEASE ADD(LIE.QAFMLYID)
ENDJOB

JOB LIE.QAFMLYID LINK PROCESS
   RUN SUN
ENDJOB

