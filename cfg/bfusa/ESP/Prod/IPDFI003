APPL IPDFI003 WAIT
NOTIFY ABEND FAILURE ALERT(REMD)
INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

FILE_TRIGGER FSIP_CUSTOMER_STATEMENT_DAILY_FILE_CREATED
   AGENT SAP_IZP100
   FILENAME +
'/xfer/outbound/fsipecc/Z_CUSTOMER_STATEMENT_PCHK_DAILY.TXT' CREATE +
NOCHANGE(1)
   RUN 1ST-10TH DAY OF MONTH
   RELEASE (FSIP_CSTMT_DAILY_DELETE_JFILE)
ENDJOB

SAP_JOB FSIP_CSTMT_DAILY_DELETE_JFILE
   AGENT SAP_IZP100
   SAPJOBNAME CSTMT_DAILY_DELETE_JFILE
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZCA_FILE_UTILITY
   VARIANT CSTM_D_JFILE
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTSPOOLNAME ZCA_FILE_UTI
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   RUN 1ST-10TH DAYS OF MONTH
   RELEASE (FSIP_CSTMT_DAILY_DELETE_SFILE)
ENDJOB

