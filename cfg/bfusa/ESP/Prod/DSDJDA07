APPL DSDJDA07 WAIT

NOTIFY ABEND FAILURE ALERT(REMD)
NOTIFY OVERDUE ALERT(LATE)
/* 10/26/2021 - VV - SCTASK0085393 overdue notification added   */
/****************************************************************/

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'
OPTIONS NODUEOUTPROPAGATION

FILE_TRIGGER BSRO_FILE_TRANSFER_HEADER_COMPLETE
   AGENT LNX_DSRSAP01PAKR
   FILENAME '/mnt/bods/bsro/prod/outbound/+
jda_analy_trfhdr_*.dat*' CREATE NOCHANGE(1)
   RUN DAILY
   RELEASE ADD(DS_JDA_TRANSFER_HEADER)
ENDJOB

LINUX_JOB DS_JDA_TRANSFER_HEADER
    AGENT LNX_DSRSAP01PAKR
    USER bodsadmin
    SCRIPTNAME /opt/ds_install/dataservices/JOB_scripts/+
    JOB_JDA_TRANSFER_HEADER.sh
    NOTIFY ABEND FAILURE ALERT(ADW1) MAILBOX(DGRIMMETT1)
    NOTIFY OVERDUE MAILBOX(DSJOBNOTIFY)
    DUEOUT EXEC 7AM
    RUN DAILY
    IF TODAY('MAY 10 2018') THEN NORUN TODAY
    RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

FILE_TRIGGER BSRO_FILE_TRANSFER_LINE_ITEM_COMPLETE
   AGENT LNX_DSRSAP01PAKR
   FILENAME '/mnt/bods/bsro/prod/outbound/+
jda_analy_trfdtl_*.dat' CREATE NOCHANGE(1)
   RUN DAILY
   RELEASE ADD(DS_JDA_TRANSFER_LINE_ITEM)
ENDJOB

LINUX_JOB DS_JDA_TRANSFER_LINE_ITEM
    AGENT LNX_DSRSAP01PAKR
    USER bodsadmin
    SCRIPTNAME /opt/ds_install/dataservices/JOB_scripts/+
    JOB_JDA_TRANSFER_LINE_ITEM.sh
    NOTIFY ABEND FAILURE ALERT(ADW1) MAILBOX(DGRIMMETT1)
    NOTIFY OVERDUE MAILBOX(DSJOBNOTIFY)
    DUEOUT EXEC 8AM
    RUN DAILY
    IF TODAY('MAY 10 2018') THEN NORUN TODAY
    RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

LINUX_JOB LIE.!ESPAPPL
   AGENT LNX_DSRSAP01PAKR
   USER bodsadmin
   COMMAND /bin/sleep
   ARGS 3
   RUN DAILY
   DUEOUT EXEC 11.00
ENDJOB

