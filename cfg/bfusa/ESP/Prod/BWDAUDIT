APPL BWDAUDIT WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/**********************************************************************/
/* 05/04/20 - CREATED PER DAVE GRIMMETT -DSG- INC00000XXXXXXX
/**********************************************************************/

NOTIFY ABEND FAILURE ALERT(REMD)
NOTIFY OVERDUE ALERT(LATE)

JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   DELAYSUB 00.30
   RELEASE ADD(LIE.BWDNTL01)
   RELEASE ADD(LIE.BWDNTL02)
   RELEASE ADD(LIE.BWDNTL03)
   RELEASE ADD(LIE.BWDNTL04)
   RELEASE ADD(LIE.BWDNTL05)
   RELEASE ADD(LIE.BWDNTL06)
   RELEASE ADD(LIE.BWDNTL07)
   RELEASE ADD(LIE.BWDNTL08)
ENDJOB

AIX_JOB LIE.BWDNTL01 EXTERNAL APPLID(BWDNTL01) SCOPE(-9)
   RUN DAILY
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

