APPL FXMCHNG2 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*12/03/2018 -JFC- changed proc and event from AVMXCHNG
/*********************************************************************/

NOTIFY ABEND FAILURE ALERT(REMD)

JOB LIS.!ESPAPPL LINK PROCESS
   RUN 1ST WORKDAY OF MONTH
   RELEASE ADD(AVG_MONTHLY_EXCHANGE_RATE_CALC)
ENDJOB

SAP_JOB AVG_MONTHLY_EXCHANGE_RATE_CALC
   AGENT CYBB_BFP030
   SAPJOBNAME AVG_MONTHLY_EXCHANGE_RATE_CALC
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZFIAPI30
   VARIANT AVGMNTHLY_WD1
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   PRINTCOPIES 001
   RUN 1ST WORKDAY OF MONTH
   EARLYSUB 11.30
   RELEASE ADD(TRANSFER_AVG_MNTHLY_EXCHNG_RATE)
ENDJOB

SAP_JOB TRANSFER_AVG_MNTHLY_EXCHNG_RATE
   AGENT CYBB_BFP030
   SAPJOBNAME TRANSFER_AVG_MNTHLY_EXCHNG_RATE
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME RFTBFF00
   VARIANT MNTHLY_AVG_ZP
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   PRINTCOPIES 001
   RUN 1ST WORKDAY OF MONTH
   RELEASE ADD(ARCHIVE_TRANSFER_AVG_MNTHLY_EXCHNG_RATE)
ENDJOB

UNIX_JOB ARCHIVE_TRANSFER_AVG_MNTHLY_EXCHNG_RATE
   AGENT CYBA_ISBFP3
   SCRIPTNAME /local/bin/arcfile.sh
   ARGS interfaces/input/datain/+
        RFTBFF00_Monthly_Avg_FX_Rates_ZP.txt M
   USER bfpadm
   RUN 1ST WORKDAY OF MONTH
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN 1ST WORKDAY OF MONTH
   DUEOUT EXEC 1pm
ENDJOB

