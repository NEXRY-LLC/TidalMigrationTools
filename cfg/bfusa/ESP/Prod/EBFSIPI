   DELAYSUB 7.00
   EXITCODE 0-1 SUCCESS
   RELEASE ADD(EBFSIPI_FT) COND(RC(0))
   RELEASE ADD(SWESPEMO.!ESPAPPL._EMAIL_NOFILE) COND(RC(1))
ENDJOB

FILE_TRIGGER EBFSIPI_FT
   AGENT APPPLS01PAKR
   FILENAME 'E:\APPS\FIRESTONE_BUILDING_PRODUCTS\FILETRIGGER\+
   INDUSTRIALPRODUCTSTRIGGER.TXT'
   RUN WEEKDAYS
   RELEASE ADD(EBFSIPI_CLEANUP)
ENDJOB

