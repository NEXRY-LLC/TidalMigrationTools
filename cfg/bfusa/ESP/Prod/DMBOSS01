APPL DMBOSS01 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/* 05/20/2016 -JFC- TAGGED APPL AS BOSS                               */
/* 02/24/2020 -JFC- UPDATED AGENT FROM R7 TO R11.5.0                  */
/*                - CHANGED JOBQ FROM CYBESPV210.CYBESPV2100          */
/* 03/05/2020 -DSG- ADDED RESOURCE TO AS400 JOBS - INC000002178390
/*********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)
TAG BOSS

AIX_JOB LIE.DMPED150 EXTERNAL APPLID(DMPED150) SCOPE(-00)
  RUN DAILY
  RELEASE ADD(LIS.!ESPAPPL)
ENDJOB

JOB LIS.!ESPAPPL LINK PROCESS
  TAG MAJORAPPS
  RUN DAILY
  RELEASE ADD(MS_BOSS)
ENDJOB

AS400_JOB MS_BOSS
  RESOURCE ADD(1,DM400A)
  AGENT DM400A
  COMMAND CYBROBOT MS_BOSS
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
  RELEASE ADD(MS_BOSSC)
ENDJOB

AS400_JOB MS_BOSSC
  RESOURCE ADD(1,DM400A)
  AGENT DM400A
  COMMAND CYBROBOT MS_BOSSC
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
  RELEASE ADD(MTIC_LOADBAT)
ENDJOB

NT_JOB MTIC_LOADBAT
  AGENT CYBA_CDC1AKFIS
  CMDNAME D:\dts_run\batchfiles\boss\MTICLOAD\MTIC_LOAD.bat
  ARGS
  USER maestro
  RUN DAILY
    NOTWITH (MTIC_LOADBAT.-)
  RELEASE ADD(BOSSSAP_88_LOADBAT)
ENDJOB

NT_JOB BOSSSAP_88_LOADBAT
  AGENT CYBA_CDC1AKFIS
  CMDNAME D:\dts_run\batchfiles\boss\SAPLOAD\BOSSSAP_88_LOAD.BAT
  ARGS
  USER maestro
  RUN DAILY
    NOTWITH BOSSSAP_81_LOADBAT
    NOTWITH BOSSSAP_AO_LOADBAT
    NOTWITH BOSSSAP_BL_LOADBAT
    NOTWITH BOSSSAP_CD_LOADBAT
    NOTWITH BOSSSAP_LV_LOADBAT
    NOTWITH BOSSSAP_8H_LOADBAT
    NOTWITH BOSSSAP_WN_LOADBAT
  RELEASE ADD(BOSSCUREBUILD_88_LOADBAT)
ENDJOB

NT_JOB BOSSCUREBUILD_88_LOADBAT
  AGENT CYBA_CDC1AKFIS
CMDNAME D:\dts_run\batchfiles\boss\CURELOAD\BOSSCureBuild_88_Load.bat
  ARGS
  USER maestro
  RUN DAILY
    NOTWITH BOSSCUREBUILD_81_LOADBAT
    NOTWITH BOSSCUREBUILD_AO_LOADBAT
    NOTWITH BOSSCUREBUILD_BL_LOADBAT
    NOTWITH BOSSCUREBUILD_CD_LOADBAT
    NOTWITH BOSSCUREBUILD_LV_LOADBAT
    NOTWITH BOSSCUREBUILD_8H_LOADBAT
    NOTWITH BOSSCUREBUILD_WN_LOADBAT
  RELEASE ADD(BOSSCOMP_88_LOADBAT)
ENDJOB

NT_JOB BOSSCOMP_88_LOADBAT
  AGENT CYBA_CDC1AKFIS
  CMDNAME D:\dts_run\batchfiles\boss\COMPLOAD\BOSSComp_88_Load.bat
  ARGS
  USER maestro
  NOTIFY OVERDUE MAILBOX(DMBOSS1)
  NOTIFY FAILURE ABEND ALERT(REMD)
  NOTIFY OVERDUE MAILBOX(AKRONJOBREQ)
  IF ESPSHH = '13' THEN DUEOUT EXEC 4pm
  IF ESPSHH = '19' THEN DUEOUT EXEC 4am
  RUN DAILY
    NOTWITH BOSSCOMP_81_LOADBAT
    NOTWITH BOSSCOMP_AO_LOADBAT
    NOTWITH BOSSCOMP_BL_LOADBAT
    NOTWITH BOSSCOMP_CD_LOADBAT
    NOTWITH BOSSCOMP_LV_LOADBAT
    NOTWITH BOSSCOMP_8H_LOADBAT
    NOTWITH BOSSCOMP_WN_LOADBAT
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

AIX_JOB LIE.!ESPAPPL
   TAG MAJORAPPS
   AGENT CYBA_ISBFP3
   COMMAND /bin/sleep
   ARGS 3
   USER bfpadm
   RUN DAILY
ENDJOB

