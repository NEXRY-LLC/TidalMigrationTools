APPL RT02 WAIT

IF (!MNAPPL EQ 'JCTEST44' AND -
     !MNFULLNAME EQ 'SWESPJC2' AND -
     !MNSTATUS EQ 'FAILED' AND -
     !MNSUB# LT '3') THEN  -
   DO
      ESP AJ SWESPJC2 RESUBMIT APPL(!ESPAPPL..0)
    ENDDO

 IF (!MNAPPL EQ 'JCTEST44' AND -
     !MNFULLNAME EQ 'SWESPJC2' AND -
     !MNSTATUS EQ 'FAILED' AND -
     !MNSUB# GT '3') THEN  -
   DO
      ESP AJ SWESPJC2 COMPLETE APPL(!ESPAPPL..0)
    ENDDO

