APPL GLM032 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*02/19/2019 -JFC- CLEANED UP PROC - ADDED LIE - NO OTHER CHANGES
/*********************************************************************/

NOTIFY ABEND FAILURE ALERT(REMD)

JOB LIS.!ESPAPPL LINK PROCESS
   RUN 15TH DAY OF MONTH
   DELAYSUB 06.00
   RELEASE ADD(ZFIGLR07_TAXSTREAM)
ENDJOB

SAP_JOB ZFIGLR07_TAXSTREAM
   AGENT CYBB_BFP030
   SAPJOBNAME ZFIGLR07_TAXSTREAM
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZFIGLR07
   VARIANT TAXSTREAM_MO
   STEPUSER SAPADM
   LANGUAGE E
   PRINTDEST CP44
   PRINTCOPIES 001
   PRINTREL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 132
   BANNER D
   RECIPIENT MOOREKAREN
   ARCMODE PRINT
   RUN REF LIS.GLM032
   RELEASE ADD(ZFIGLR07.DOMESTIC)
   RELEASE ADD(ZFIGLR07.FOREIGN)
ENDJOB

DATA_OBJECT PARMSET.!ESPAPPL
   /*CREATE A TIMESTAMP IN HHMMMMDDYY FORMAT*/
   SETVAR TMSTMP='!ESPSHH.:!ESPSMN.,!ESPSMM./!ESPSDD./!ESPSYY'
   SETVAR PID=''
   SETVAR STMPTM='!ESPSMM./!ESPSDD./!ESPSYY.,!ESPSHH.:!ESPSMN'
ENDJOB

JOB SETPID.!ESPAPPL LINK PROCESS
   /*GET THE NEXT PID NUMBER FROM THE CONNECTDIRECT*/
   /*PROCESS ID TABLE (CDPROD).  SAVE THE VALUE INTO*/
   /*THE APPLICATIONS DATAOBJECT FOR USE BY THE C:D*/
   /*JOB AND THE CDSTAT JOB (IF NEEDED).*/
   VINCR (PID) TABLE(CDPROD) CLANG
   VGET  (PID) TABLE(CDPROD) CLANG
   ESP MGRMSG * . . . PARMSET.!ESPAPPL/!ESPAPPL..!ESPAPGEN/MAIN +
     ACTION SET PID(!PID)
   RUN REF LIS.!ESPAPPL
   RELEASE ADD(ZFIGLR07.DOMESTIC)
ENDJOB

JOB SETPID2.!ESPAPPL LINK PROCESS
   /*GET THE NEXT PID NUMBER FROM THE CONNECTDIRECT*/
   /*PROCESS ID TABLE (CDPROD).  SAVE THE VALUE INTO*/
   /*THE APPLICATIONS DATAOBJECT FOR USE BY THE C:D*/
   /*JOB AND THE CDSTAT JOB (IF NEEDED).*/
   VINCR (PID) TABLE(CDPROD) CLANG
   VGET  (PID) TABLE(CDPROD) CLANG
   ESP MGRMSG * . . . PARMSET.!ESPAPPL/!ESPAPPL..!ESPAPGEN/MAIN +
     ACTION SET PID(!PID)
   RUN REF LIS.!ESPAPPL
   RELEASE ADD(ZFIGLR07.FOREIGN)
ENDJOB

AIX_JOB CDSTAT.DOMESTIC CONDITIONAL
   AGENT CYBA_ISBFP3
   AFTER ADD(ZFIGLR07.DOMESTIC(A))
   /*THIS JOB ONLY RUNS IF THE C:D JOB DOES NOT END WITH*/
   /*A EXITCODE OF 0.  IT CAN BE RERUN AS OFTEN AS*/
   /*REQUIRED TO CHECK THE STATUS OF THE C:D PROCESS.*/
   /*WHEN THE C:D PROCESS FINISHES, COMPLETE THE JOB*/
   /*TO RELEASE THE SUCCESSORS.*/
   USER CDUSER
   STMPTM= WOBDATA('PARMSET.!ESPAPPL','STMPTM')
   PID= WOBDATA('PARMSET.!ESPAPPL','PID')
   CMDNAME /APPS/CONDIR/BFSBIN/CDSTAT.SH
   ARGS !STMPTM  J!PID
   RUN REF LIS.!ESPAPPL
ENDJOB

AIX_JOB CDSTAT.FOREIGN CONDITIONAL
   AGENT CYBA_ISBFP3
   AFTER ADD(ZFIGLR07.FOREIGN(A))
   /*THIS JOB ONLY RUNS IF THE C:D JOB DOES NOT END WITH*/
   /*A EXITCODE OF 0.  IT CAN BE RERUN AS OFTEN AS*/
   /*REQUIRED TO CHECK THE STATUS OF THE C:D PROCESS.*/
   /*WHEN THE C:D PROCESS FINISHES, COMPLETE THE JOB*/
   /*TO RELEASE THE SUCCESSORS.*/
   USER CDUSER
   STMPTM= WOBDATA('PARMSET.!ESPAPPL','STMPTM')
   PID= WOBDATA('PARMSET.!ESPAPPL','PID')
   CMDNAME /APPS/CONDIR/BFSBIN/CDSTAT.SH
   ARGS !STMPTM  J!PID
   RUN REF LIS.!ESPAPPL
ENDJOB

UNIX_JOB ZFIGLR07.DOMESTIC
   AGENT CYBA_ISBFP3
   AFTER ADD(SETPID.!ESPAPPL)
   EARLYSUB REALNOW PLUS 20 SECONDS
   PID= WOBDATA('PARMSET.!ESPAPPL','PID')
   TMSTMP= WOBDATA('PARMSET.!ESPAPPL','TMSTMP')
   SCRIPTNAME /apps/condir/bfsbin/submitcd.sh
   ARGS zfiglr07_taxstream_domestic.cd 5 !PID !TMSTMP
   RESOURCE ADD(1,ISBFP3CD)
   USER cdprod
   RUN REF LIS.GLM032
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

UNIX_JOB ZFIGLR07.FOREIGN
   AGENT CYBA_ISBFP3
   AFTER ADD(SETPID2.!ESPAPPL)
   EARLYSUB REALNOW PLUS 20 SECONDS
   PID= WOBDATA('PARMSET.!ESPAPPL','PID')
   TMSTMP= WOBDATA('PARMSET.!ESPAPPL','TMSTMP')
   SCRIPTNAME /apps/condir/bfsbin/submitcd.sh
   ARGS zfiglr07_taxstream_foreign.cd 5 !PID !TMSTMP
   RESOURCE ADD(1,ISBFP3CD)
   USER cdprod
   RUN REF LIS.GLM032
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN REF LIS.GLM032
ENDJOB


