APPL UXWBSRQ WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*  Removed NBUINCR step & cleaned up application - 05/20/2016 jre
/*02/19/2019 -JFC- CLEANED UP PROC - ADDED LIE - NO OTHER CHANGES
/*********************************************************************/

NOTIFY ABEND FAILURE ALERT(REMD)

UNIX_JOB SXQDBWKL.SXQDB EXTERNAL APPLID(UXWBSXQ)
   RUN SUN
   RELEASE ADD(LIS.!ESPAPPL)
ENDJOB

JOB LIS.!ESPAPPL LINK PROCESS
   RUN SUN
   EARLYSUB 19.00
   RELEASE ADD(STOTOMBO.SXQRPTBO)
ENDJOB

UNIX_JOB STOTOMBO.SXQRPTBO
   AGENT CYBA_SXQRPTBO
   SCRIPTNAME /local/bin/stop_tomcat_boe.sh
   USER root
   RUN SUN
   RELEASE ADD(STOTOMDS.SXQRPTDS)
ENDJOB

UNIX_JOB STOTOMDS.SXQRPTDS
   AGENT CYBA_SXQRPTDS
   SCRIPTNAME /local/bin/stop_tomcat_ds.sh
   USER root
   RUN SUN
   RELEASE ADD(SRQSTOPD.SXQRPTDB)
ENDJOB

UNIX_JOB SRQSTOPD.SXQRPTDB
   AGENT CYBA_SXQRPTDB
   SCRIPTNAME /local/bin/stop_db2_sbrx.sh
   ARGS SBRQ
   USER root
   RUN SUN
   RELEASE ADD(SRQSTRTD.SXQRPTDB)
ENDJOB

UNIX_JOB SRQSTRTD.SXQRPTDB
   IF TODAY('OCT 20 2013') THEN JOBATTR HOLD
   AGENT CYBA_SXQRPTDB
   SCRIPTNAME /local/bin/start_db2_sbrx.sh
   ARGS SBRQ
   USER root
   RUN SUN
   RELEASE ADD(SRQDBWKL.SXQRPTDB)
ENDJOB

UNIX_JOB SRQDBWKL.SXQRPTDB
   AGENT CYBA_SXQRPTDB
   SCRIPTNAME /local/bin/db2_backup_sbrx.sh
   ARGS SBRQ SBXRPT ONLINE
   USER root
   RUN SUN
   RELEASE ADD(STATOMDS.SXQRPTDS)
ENDJOB

UNIX_JOB STATOMDS.SXQRPTDS
   AGENT CYBA_SXQRPTDS
   SCRIPTNAME /local/bin/start_tomcat_ds.sh
   USER root
   RUN SUN
   RELEASE ADD(STATOMBO.SXQRPTBO)
ENDJOB

UNIX_JOB STATOMBO.SXQRPTBO
   AGENT CYBA_SXQRPTBO
   SCRIPTNAME /local/bin/start_tomcat_boe.sh
   USER root
   RUN SUN
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN SUN
ENDJOB

