APPL SABOSS01 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*    THIS IS FOR SANTO ANDRE BRAZIL PLANT - SAP PLANT CODE IN25           */
/* 06/21/2022 - VV - New schedule created - SCTASK0157713
/* 06/22/2022 - VV - added user - INC0310397
/*********************************************************************/

NOTIFY ABEND FAILURE ALERT(REMD)
/*NOTIFY OVERDUE ALERT(LATE)
TAG BOSS

JOB LIS.!ESPAPPL LINK PROCESS
  RUN DAILY
  IF ESPSHH = '11' THEN DELAYSUB 13.45
  IF ESPSHH = '19' THEN DELAYSUB 21.15
  RELEASE ADD(SA_BOSS.BFBRPRO)
ENDJOB

AS400_JOB SA_BOSS.BFBRPRO
  AGENT BFBRPRO
  CLPNAME TEBOSS
  LIBL (MSBREXT MSPTFILE MSPTOBJ QGPL YOB610 QTEMP)
  JOBD MSPTOBJ/TESSJOBD
  RUN DAILY
  RELEASE ADD(SA_BOSSC.BFBRPRO)
ENDJOB

AS400_JOB SA_BOSSC.BFBRPRO
  AGENT BFBRPRO
  CLPNAME TEBOSSCOM
  LIBL (MSBREXT MSPTFILE MSPTOBJ QGPL YOB610 QTEMP)
  JOBD MSPTOBJ/TESSJOBD
  RUN DAILY
  RELEASE ADD(BOSSSAP_SA_LOADBAT)
ENDJOB

NT_JOB BOSSSAP_SA_LOADBAT
  AGENT WEB3AKATC
  USER bfusa\maestro
  CMDNAME D:\BOSS_SAP\batch_files\BossSapLoad_15.bat
  ARGS
  RUN DAILY
    NOTWITH BOSSSAP_AO_LOADBAT
    NOTWITH BOSSSAP_BL_LOADBAT
    NOTWITH BOSSSAP_88_LOADBAT
    NOTWITH BOSSSAP_CD_LOADBAT
    NOTWITH BOSSSAP_LV_LOADBAT
    NOTWITH BOSSSAP_8H_LOADBAT
    NOTWITH BOSSSAP_WN_LOADBAT
  RELEASE ADD(BOSSCUREBUILD_SA_LOADBAT)
ENDJOB

NT_JOB BOSSCUREBUILD_SA_LOADBAT
  AGENT WEB3AKATC
  CMDNAME D:\TESS_TO_BOSS\batch_files\ExecCureLoad_15.bat
  ARGS
  RUN DAILY
    NOTWITH BOSSCUREBUILD_AO_LOADBAT
    NOTWITH BOSSCUREBUILD_BL_LOADBAT
    NOTWITH BOSSCUREBUILD_88_LOADBAT
    NOTWITH BOSSCUREBUILD_CD_LOADBAT
    NOTWITH BOSSCUREBUILD_LV_LOADBAT
    NOTWITH BOSSCUREBUILD_8H_LOADBAT
    NOTWITH BOSSCUREBUILD_WN_LOADBAT
  RELEASE ADD(BOSSCOMP_SA_LOADBAT)
ENDJOB

NT_JOB BOSSCOMP_SA_LOADBAT
  AGENT WEB3AKATC
  CMDNAME D:\TESS_TO_BOSS\batch_files\ExecCompLoad_15.bat
  ARGS
  RUN DAILY
   NOTIFY FAILURE ABEND ALERT(REMD)
   NOTIFY OVERDUE MAILBOX(AIBOSS1)
   NOTIFY OVERDUE MAILBOX(AKRONJOBREQ)
   IF ESPSHH = '13' THEN DUEOUT EXEC 4PM
   IF ESPSHH = '19' THEN DUEOUT EXEC 4AM
    NOTWITH BOSSCOMP_AO_LOADBAT
    NOTWITH BOSSCOMP_BL_LOADBAT
    NOTWITH BOSSCOMP_88_LOADBAT
    NOTWITH BOSSCOMP_CD_LOADBAT
    NOTWITH BOSSCOMP_LV_LOADBAT
    NOTWITH BOSSCOMP_8H_LOADBAT
    NOTWITH BOSSCOMP_WN_LOADBAT
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

AIX_JOB LIE.!ESPAPPL
  AGENT CYBA_ISBFP3
  COMMAND /bin/sleep
  ARGS 3
  USER bfpadm
  RUN DAILY
ENDJOB
