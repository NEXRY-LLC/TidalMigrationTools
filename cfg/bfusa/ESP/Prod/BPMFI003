APPL BPMFI003 WAIT
NOTIFY ABEND FAILURE ALERT(REMD)
INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

SAP_JOB FSBP_CSTMT_MONTHLY_DELETE_JFILE
   AGENT SAP_BZP100
   SAPJOBNAME CSTMT_MONTHLY_DELETE_JFILE
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZCA_FILE_UTILITY
   VARIANT CSTM_D_JFILE
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTSPOOLNAME ZCA_FILE_UTI
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   RUN LAST DAY OF MONTH
   EARLYSUB 00.01
   RELEASE ADD(FSBP_CSTMT_MONTHLY_DELETE_SFILE)
ENDJOB

SAP_JOB FSBP_CSTMT_MONTHLY_DELETE_SFILE
   AGENT SAP_BZP100
   SAPJOBNAME CSTMT_MONTHLY_DELETE_SFILE
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZCA_FILE_UTILITY
   VARIANT CSTM_JFILE
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTSPOOLNAME ZCA_FILE_UTI
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   RUN LAST DAY OF MONTH
   RELEASE ADD(FSBP_CSTMT_MONTHLY_CHECK_PERIOD)
ENDJOB

SAP_JOB FSBP_CSTMT_MONTHLY_CHECK_PERIOD
   AGENT SAP_BZP100
   SAPJOBNAME CSTMT_MONTHLY_CHECK_PERIOD
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZFI_JOB_EVENT_TRIG
   VARIANT 'CUST STATEMENT'
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTSPOOLNAME ZFI_JOB_EVEN
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   RUN LAST DAY OF MONTH
ENDJOB


