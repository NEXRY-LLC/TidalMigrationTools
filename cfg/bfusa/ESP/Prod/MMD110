/*********************************************************************/

NOTIFY ABEND FAILURE ALERT(REMD)
NOTIFY ABEND FAILURE OVERDUE MAILBOX(AKRONJOBREQ)


FILE_TRIGGER SINGAPORE_INPUT
   AGENT CYBA_ISBFP3
   FILENAME '/data/BFP/interfaces/input/datain/zmmpoi05_input*.txt' +
CREATE NOCHANGE(1)
   RUN DAILY
   RELEASE ADD(LIS.!ESPAPPL)
ENDJOB

JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(MV_ZMMPOI05_INPUT)
ENDJOB

UNIX_JOB MV_ZMMPOI05_INPUT
   AGENT CYBA_ISBFP3
   USER root
   CMDNAME /local/bin/mv_zmmpoi05.sh
   ARGS BFP
   RUN DAILY
/* EXITCODE 6 SUCCESS
   RELEASE ADD(ZMMPUR19_BSSG_PURCHASE_ACTIVITY)
ENDJOB

SAP_JOB ZMMPUR19_BSSG_PURCHASE_ACTIVITY
   AGENT CYBB_BFP030
   SAPJOBNAME ZMMPUR19_BSSG_PURCHASE_ACTIVITY
   SAPJOBCLASS C
   ABAPNAME ZMMPUR19
   VARIANT ZMMPUR19_BFP
   STEPUSER SAPADM
   LANGUAGE E
   PRINTDEST RICO
   PRINTIMMED YES
   EXPIRATION 8
   COLUMNS 170
   RECIPIENT RAINESROMAN
   ARCMODE PRINT
   PRINTCOPIES 001
   BANNER D
   RUN DAILY
   RELEASE ADD(ZMMPOI05_PO_CHANGE_INT)
ENDJOB

SAP_JOB ZMMPOI05_PO_CHANGE_INT
   AGENT CYBB_BFP030
   SAPJOBNAME ZMMPOI05_PO_CHANGE_INT
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZMMPOI05
   VARIANT ZMMPOI05_POC
   STEPUSER SAPADM
   LANGUAGE E
   PRINTIMMED NO
   PRINTREL YES
   EXPIRATION 8
   COLUMNS 132
   BANNER D
   ARCMODE PRINT
   PRINTCOPIES 001
   RUN DAILY
   RELEASE ADD(ARCHIVE_SINGAPORE_INPUT)
ENDJOB

UNIX_JOB ARCHIVE_SINGAPORE_INPUT
   AGENT CYBA_ISBFP3
   USER bfpadm
   SCRIPTNAME /local/bin/arcfile.sh
   ARGS interfaces/input/datain/zmmpoi05_input.txt D
   RUN DAILY
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN DAILY
ENDJOB

APPLEND TRIGNEW1.!ESPAPPL
   ESPNOMSG TRIGGER !ESPEVENT ADD
ENDJOB


