APPL BPDFI003 WAIT
NOTIFY ABEND FAILURE ALERT(REMD)
INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

FILE_TRIGGER FSBP_CUSTOMER_STATEMENT_DAILY_FILE_CREATED
   AGENT SAP_BZP100
   FILENAME +
'/xfer/outbound/fsbpecc/Z_CUSTOMER_STATEMENT_PCHK_DAILY.TXT' CREATE +
NOCHANGE(1)
   RUN 1ST-10TH DAYS OF MONTH
   RELEASE ADD(FSBP_CSTMT_DAILY_DELETE_JFILE)
ENDJOB

SAP_JOB FSBP_CSTMT_DAILY_DELETE_JFILE
   AGENT SAP_BZP100
   SAPJOBNAME CSTMT_DAILY_DELETE_JFILE
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZCA_FILE_UTILITY
   VARIANT CSTM_D_JFILE
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   PRINTSPOOLNAME ZCA_FILE_UTI
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   PRINTCOPIES 001
   RUN 1ST-10TH DAYS OF MONTH
   RELEASE ADD(FSBP_CSTMT_DAILY_DELETE_SFILE)
ENDJOB

