NOTIFY ABEND FAILURE ALERT(REMD)

JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   EARLYSUB 03.00
   RELEASE ADD(ZFIARR05_AR_PYMT_POSTING)
ENDJOB

DATA_OBJECT PARMSET.!ESPAPPL
   /*Create a timestamp in hhmmMMDDYY format*/
   SETVAR TMSTMP='!ESPSHH.:!ESPSMN.,!ESPSMM./!ESPSDD./!ESPSYY'
   SETVAR PID=''
   SETVAR STMPTM='!ESPSMM./!ESPSDD./!ESPSYY.,!ESPSHH.:!ESPSMN'
   RUN TUE WED THU FRI SAT
ENDJOB

SAP_JOB ZFIARR05_AR_PYMT_POSTING
   AGENT CYBB_BFP030
   SAPJOBNAME ZFIARR05_AR_PYMT_POSTING
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZFIARR05
   VARIANT POST_ALL
   STEPUSER SAPADM
   LANGUAGE E
   PRINTREL YES
   EXPIRATION 8
   COLUMNS 132
   ARCMODE PRINT
   BANNER D
   PRINTCOPIES 001
   RUN TUE WED THU FRI SAT
   RELEASE ADD(ZFIARI11_JPMB_EXTRACT)
ENDJOB

SAP_JOB ZFIARI11_JPMB_EXTRACT
   AGENT CYBB_BFP030
