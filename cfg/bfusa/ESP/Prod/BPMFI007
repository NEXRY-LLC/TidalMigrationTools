APPL BPMFI007 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/**********************************************************************/
/* 02/26/20 - ADDED 2 NEW VARIANTS (3010 & 3200 -DSG- INC000002154204
/**********************************************************************/

NOTIFY ABEND FAILURE ALERT(REMD)
NOTIFY OVERDUE ALERT(LATE)

JOB LIS.!ESPAPPL LINK PROCESS
   RUN 2ND WORKDAY OF MONTH LESS 1 DAY
   RELEASE ADD(FI_DEPRECIATION_1000)
   RELDELAY 120
ENDJOB

SAP_JOB FI_DEPRECIATION_1000
   AGENT SAP_BZP100
   SAPJOBNAME FI_DEPRECIATION_1000
   SAPJOBCLASS C
   BANNER D
   PRINTCOPIES 001
   STARTMODE ASAP
   ABAPNAME RAPOST2000
   VARIANT ZFI_CC_1000
   STEPUSER FSBP_BATCH
   LANGUAGE E
   PRINTSPOOLNAME RAPOST2000_
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 132
   PRINTFORMAT X_PAPER
   RECIPIENT FSBP_BATCH
   PRINTDEPARTMENT 'JOB SCHEDULE'
   ARCMODE PRINT
   RUN 2ND WORKDAY OF MONTH LESS 1 DAY
   RELEASE (FI_DEPRECIATION_3000)
ENDJOB

