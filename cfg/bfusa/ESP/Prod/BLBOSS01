APPL BLBOSS01 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/* 11/19/2014 -JFC- APPL SET UP PER JULIE PETERSON                    */
/* 05/20/2016 -JFC- TAGGED APPL AS BOSS                               */
/* 02/24/2020 -JFC- UPDATED AGENT FROM R7 TO R11.5.0                  */
/*                - CHANGED JOBQ FROM CYBESPV210.CYBESPV2100          */
/* 03/05/2020 -DSG- ADDED RESOURCE TO AS400 JOBS - INC000002178387
/*********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)
TAG BOSS

JOB LIE.BLPED150 EXTERNAL APPLID(BLPED150) SCOPE(-00)
  RUN DAILY
  RELEASE ADD(LIS.!ESPAPPL)
ENDJOB

JOB LIS.!ESPAPPL LINK PROCESS
  RUN DAILY
  RELEASE ADD(BLMS_BOSS)
ENDJOB

AS400_JOB BLMS_BOSS
  RESOURCE ADD(1,AKNITS)
  AGENT AKNITS
  COMMAND CYBROBOT BLMS_BOSS
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
  RELEASE ADD(BLMS_BOSSC)
ENDJOB

AS400_JOB BLMS_BOSSC
  RESOURCE ADD(1,AKNITS)
  AGENT AKNITS
  COMMAND CYBROBOT BLMS_BOSSC
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
  RELEASE ADD(MTIC_LOADBAT)
ENDJOB

NT_JOB MTIC_LOADBAT
  AGENT CYBA_CDC1AKFIS
  CMDNAME D:\DTS_RUN\BatchFiles\BOSS\MticLoad\MTIC_LOAD.bat
  ARGS
  USER maestro
  RUN DAILY
  RELEASE ADD(BOSSSAP_BL_LOADBAT)
ENDJOB

NT_JOB BOSSSAP_BL_LOADBAT
  AGENT CYBA_CDC1AKFIS
  CMDNAME D:\dts_RUN\batchfiles\boss\SapLoad\BOSSSAP_BL_LOAD.BAT
  ARGS
  USER maestro
  RUN DAILY
    NOTWITH BOSSSAP_81_LOADBAT
    NOTWITH BOSSSAP_AO_LOADBAT
    NOTWITH BOSSSAP_88_LOADBAT
    NOTWITH BOSSSAP_CD_LOADBAT
    NOTWITH BOSSSAP_LV_LOADBAT
    NOTWITH BOSSSAP_8H_LOADBAT
    NOTWITH BOSSSAP_WN_LOADBAT
  RELEASE ADD(BOSSCUREBUILD_BL_LOADBAT)
ENDJOB

NT_JOB BOSSCUREBUILD_BL_LOADBAT
  AGENT CYBA_CDC1AKFIS
  CMDNAME D:\dts_RUN\batchfiles\boss\CureLoad\BOSSCureBuild_BL_Load.bat
  ARGS
  USER maestro
  RUN DAILY
    NOTWITH BOSSCUREBUILD_81_LOADBAT
    NOTWITH BOSSCUREBUILD_AO_LOADBAT
    NOTWITH BOSSCUREBUILD_88_LOADBAT
    NOTWITH BOSSCUREBUILD_CD_LOADBAT
    NOTWITH BOSSCUREBUILD_LV_LOADBAT
    NOTWITH BOSSCUREBUILD_8H_LOADBAT
    NOTWITH BOSSCUREBUILD_WN_LOADBAT
  RELEASE ADD(BOSSCOMP_BL_LOADBAT)
ENDJOB

NT_JOB BOSSCOMP_BL_LOADBAT
  AGENT CYBA_CDC1AKFIS
  CMDNAME D:\dts_RUN\batchfiles\boss\CompLoad\BOSSComp_BL_Load.bat
  ARGS
  USER maestro
  RUN DAILY
   NOTIFY FAILURE ABEND ALERT(REMD)
   NOTIFY OVERDUE MAILBOX(AKRONJOBREQ)
   IF ESPSHH = '13' THEN DUEOUT EXEC 4pm
   IF ESPSHH = '19' THEN DUEOUT EXEC 4AM
    NOTWITH BOSSCOMP_81_LOADBAT
    NOTWITH BOSSCOMP_AO_LOADBAT
    NOTWITH BOSSCOMP_88_LOADBAT
    NOTWITH BOSSCOMP_CD_LOADBAT
    NOTWITH BOSSCOMP_LV_LOADBAT
    NOTWITH BOSSCOMP_8H_LOADBAT
    NOTWITH BOSSCOMP_WN_LOADBAT
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

AIX_JOB LIE.!ESPAPPL
  AGENT CYBA_ISBFP3
  COMMAND /bin/sleep
  ARGS 3
  USER bfpadm
  RUN DAILY
ENDJOB

