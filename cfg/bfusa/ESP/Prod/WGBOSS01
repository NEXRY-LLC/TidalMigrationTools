APPL WGBOSS01 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/* 05/20/206  -JFC- TAGGED APPL AS BOSS
/* 02/25/2020 -DSG- UPDATED AGENT FROM R7 TO R11.5.0
/*                - CHANGED JOBQ FROM CYBESPV210.CYBESPV2100
/* 03/05/2020 -DSG- ADDED RESOURCE TO AS400 JOBS - INC000002178387
/* 02/17/2022 -VV - SCTASK0118325 - changed timings.
/*********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)
TAG BOSS

AIX_JOB LIE.WGPED150 EXTERNAL APPLID(WGPED150) SCOPE(-00)
  RUN DAILY
  RELEASE ADD(LIS.WGBOSS01)
ENDJOB

JOB LIS.WGBOSS01 LINK PROCESS
  TAG MAJORAPPS
  RUN DAILY
  IF ESPSHH = '19' THEN DELAYSUB 21.25
  RELEASE ADD(WGMS_BOSS)
ENDJOB

AS400_JOB WGMS_BOSS
  RESOURCE ADD(1,AKNITS)
  AGENT AKNITS
  COMMAND CYBROBOT WGMS_BOSS
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
  RELEASE ADD(WGMS_BOSSC)
ENDJOB

AS400_JOB WGMS_BOSSC
  RESOURCE ADD(1,AKNITS)
  AGENT AKNITS
  COMMAND CYBROBOT WGMS_BOSSC
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
  RELEASE ADD(MTIC_LOADBAT)
ENDJOB

NT_JOB MTIC_LOADBAT
  AGENT CYBA_CDC1AKFIS
  CMDNAME D:\dts_run\batchfiles\boss\MTICLOAD\MTIC_LOAD.bat
  ARGS
  USER maestro
  RUN DAILY
    NOTWITH (MTIC_LOADBAT.-)
  RELEASE ADD(BOSSSAP_8H_LOADBAT)
ENDJOB

NT_JOB BOSSSAP_8H_LOADBAT
  AGENT CYBA_CDC1AKFIS
  CMDNAME D:\dts_run\batchfiles\boss\SAPLOAD\BOSSSAP_8H_LOAD.BAT
  ARGS
  USER maestro
  RUN DAILY
    NOTWITH BOSSSAP_81_LOADBAT
    NOTWITH BOSSSAP_AO_LOADBAT
    NOTWITH BOSSSAP_BL_LOADBAT
    NOTWITH BOSSSAP_88_LOADBAT
    NOTWITH BOSSSAP_CD_LOADBAT
    NOTWITH BOSSSAP_LV_LOADBAT
    NOTWITH BOSSSAP_WN_LOADBAT
  RELEASE ADD(BOSSCUREBUILD_8H_LOADBAT)
ENDJOB

NT_JOB BOSSCUREBUILD_8H_LOADBAT
  AGENT CYBA_CDC1AKFIS
  CMDNAME D:\dts_run\batchfiles\boss\CURELOAD\BOSSCureBuild_8H_Load.bat
  ARGS
  USER maestro
  RUN DAILY
    NOTWITH BOSSCUREBUILD_81_LOADBAT
    NOTWITH BOSSCUREBUILD_AO_LOADBAT
    NOTWITH BOSSCUREBUILD_BL_LOADBAT
    NOTWITH BOSSCUREBUILD_88_LOADBAT
    NOTWITH BOSSCUREBUILD_CD_LOADBAT
    NOTWITH BOSSCUREBUILD_LV_LOADBAT
    NOTWITH BOSSCUREBUILD_WN_LOADBAT
  RELEASE ADD(BOSSCOMP_8H_LOADBAT)
ENDJOB

NT_JOB BOSSCOMP_8H_LOADBAT
  AGENT CYBA_CDC1AKFIS
  CMDNAME D:\dts_run\batchfiles\boss\COMPLOAD\BOSSComp_8H_Load.bat
  ARGS
  USER maestro
  RUN DAILY
   NOTIFY OVERDUE MAILBOX(WIBOSS1)
   NOTIFY FAILURE ABEND ALERT(REMD)
   IF ESPSHH = '11' THEN DUEOUT EXEC 4pm
   IF ESPSHH = '19' THEN DUEOUT EXEC 4AM
    NOTWITH BOSSCOMP_81_LOADBAT
    NOTWITH BOSSCOMP_AO_LOADBAT
    NOTWITH BOSSCOMP_BL_LOADBAT
    NOTWITH BOSSCOMP_88_LOADBAT
    NOTWITH BOSSCOMP_CD_LOADBAT
    NOTWITH BOSSCOMP_LV_LOADBAT
    NOTWITH BOSSCOMP_WN_LOADBAT
  RELEASE ADD(LIE.WGBOSS01)
ENDJOB

AIX_JOB LIE.WGBOSS01
  TAG MAJORAPPS
  AGENT CYBA_ISBFP3
  COMMAND /bin/sleep
  ARGS 3
  USER bfpadm
  RUN DAILY
ENDJOB

