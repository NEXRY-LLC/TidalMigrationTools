APPL QACUSCHK WAIT

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND MAILBOX(QAFAIL1)

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'
TAG PPIW

NT_JOB CUSTOMER_MASTER EXTERNAL APPLID(QACUSMST)
   RUN THU, SUN
   RELEASE ADD(LIS.QACUSCHK)
ENDJOB

JOB LIS.QACUSCHK LINK PROCESS
   RUN THU SUN
   EARLYSUB 01.00
   RELEASE ADD(CUSTOMER_MASTER_CHECKS)
ENDJOB

NT_JOB CUSTOMER_MASTER_CHECKS
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\customer_master_checks.cmd
   ARGS
   RUN THU SUN
   USER maestro
   RELEASE ADD(CUSTOMER_MASTER_DELETED_CHECKS)
ENDJOB

NT_JOB CUSTOMER_MASTER_DELETED_CHECKS
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\customer_master_deleted_checks.cmd
   ARGS 6
   RUN THU SUN
   USER maestro
   RELEASE ADD(LIE.QACUSCHK)
ENDJOB

NT_JOB LIE.QACUSCHK
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\LinkedInEnd.cmd
   ARGS
   USER maestro
   RUN THU SUN
ENDJOB

