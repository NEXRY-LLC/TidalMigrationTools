APPL IPDFI004 WAIT
NOTIFY ABEND FAILURE ALERT(REMD)
INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

SAP_JOB FSIP_CREDIT_REORG_DAILY_CHK
   AGENT SAP_IZP100
   SAPJOBNAME CREDIT_REORG_DAILY_CHK
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZCA_FILE_UTILITY
   VARIANT CREORG_D_FILE
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTSPOOLNAME ZCA_FILE_UTI
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   RUN DAILY
   DELAYSUB 21.05
   RELEASE (FSIP_CREDIT_REORG_UPDATE)
ENDJOB

SAP_JOB FSIP_CREDIT_REORG_UPDATE
   AGENT SAP_IZP100
   SAPJOBNAME CREDIT_REORG_UPDATE
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME Z_RVKRED77_PARALLEL
   VARIANT BFDP-BFDP
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTSPOOLNAME Z_RVKRED77_P
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   RUN DAILY
   RELEASE (FILE_FROM_CREDIT_REORG_UPDATE_CREATED)
ENDJOB

FILE_TRIGGER FILE_FROM_CREDIT_REORG_UPDATE_CREATED
   AGENT SAP_IZP100
   FILENAME '/xfer/outbound/fsipecc/CREDIT_ORG_DAILY_JOB.TXT' CREATE +
NOCHANGE(1)
   RUN DAILY
   EARLYSUB 04.12
   RELEASE ADD(FSIP_CREDIT_REORG_DAILY_CHK_R)
ENDJOB

