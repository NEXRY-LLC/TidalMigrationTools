APPL LE46 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*==== LED046 DATA
/* IF THE JOB HAS FAILED, AND SUBMIT COUNT IS LESS THAN FOUR
/*  THIS WILL RERUN THE FAILED JOB AFTER 1 MINUTE

IF (!MNAPPL EQ 'LED046' AND -
    !MNFULLNAME EQ 'ZSDLEI27_OUTB_ASN_IDOCS_EDI_856' AND -
    !MNSUB# LT '4') THEN  -
  DO
     JOB RERUNIT.!MNJOB LINK PROCESS
      RUN TODAY
      RELDELAY 1
      ESP AJ !MNFULLNAME RESUBMIT APPL(!MNAPPL..!MNAPPLGEN)
     ENDJOB
   ENDDO

/* IF THE JOB HAS FAILED, AND SUBMIT COUNT EQUALS FOUR */

IF (!MNAPPL EQ 'LED046' AND -
    !MNFULLNAME EQ 'ZSDLEI27_OUTB_ASN_IDOCS_EDI_856' AND -
    !MNSUB# EQ '4') THEN  -
  DO
   /**LEAVE THE JOB ABENDED AND CREATE A TICKET IN REMEDY **/
   /***USE THE !USER3 AND !USER4 VARIABLES TO DIRECT THE TICKET
   /****TO THE APROPRIATE GROUP
     JOB SWESPREX.!MNAPPL
      !USER3='IT OPERATIONS CONTROL'
      !USER4='DATA CENTER OPERATIONS'
       REM_SYMBOLIC_1A='JOB !MNFULLNAME..!MNQUAL'
       REM_SYMBOLIC_1B='A JOB IN APPL !MNAPPL FAILED WITH CC!MNCMPC..'
       REM_SYMBOLIC_2A='JOB !MNFULLNAME..!MNQUAL'
       REM_SYMBOLIC_2B='IN APPL !MNAPPL GEN# !MNAPPLGEN HAS FAILED.'
       REM_SYMBOLIC_3='THE JES JOB# IS !MNJOBNO WHICH'
       REM_SYMBOLIC_4='STARTED AT !MNJSTART..'
       REM_SYMBOLIC_5='THE AGENT IS !MNAGENT..'
       REM_SYMBOLIC_6='!MNFULLNAME'
       REM_EXMK='!'
      RUN TODAY
     ENDJOB
   /*** COMPLETE THE FAILED JOB ***/
   /*ESP AJ !MNFULLNAME COMPLETE APPL(!MNAPPL..!MNAPPLGEN)
   ENDDO

/*==== LED016 DATA
/* IF THE JOB HAS FAILED, AND SUBMIT COUNT IS LESS THAN TWO -
/*  THIS WILL RERUN THE FAILED JOB AFTER 1 MINUTE

IF (!MNAPPL EQ 'LED016' AND !MNSUB# LT '4') THEN
  DO
     JOB RERUNIT.!MNJOB LINK PROCESS
      RUN TODAY
      RELDELAY 1
      ESP AJ !MNFULLNAME RESUBMIT APPL(!MNAPPL..!MNAPPLGEN)
     ENDJOB
   ENDDO

/* IF THE JOB HAS FAILED, AND SUBMIT COUNT EQUALS FOUR */

IF (!MNAPPL EQ 'LED016' AND !MNSUB# EQ '4') THEN
  DO
   /**LEAVE THE JOB ABENDED AND CREATE A TICKET IN REMEDY **/
   /***USE THE !USER3 AND !USER4 VARIABLES TO DIRECT THE TICKET
   /****TO THE APROPRIATE GROUP
     JOB SWESPREX.!MNAPPL
      !USER3='IT OPERATIONS CONTROL'
      !USER4='DATA CENTER OPERATIONS'
       REM_SYMBOLIC_1A='JOB !MNFULLNAME..!MNQUAL'
       REM_SYMBOLIC_1B='A JOB IN APPL !MNAPPL FAILED WITH CC!MNCMPC..'
       REM_SYMBOLIC_2A='JOB !MNFULLNAME..!MNQUAL'
       REM_SYMBOLIC_2B='IN APPL !MNAPPL GEN# !MNAPPLGEN HAS FAILED.'
       REM_SYMBOLIC_3='THE JES JOB# IS !MNJOBNO WHICH'
       REM_SYMBOLIC_4='STARTED AT !MNJSTART..'
       REM_SYMBOLIC_5='THE AGENT IS !MNAGENT..'
       REM_SYMBOLIC_6='!MNFULLNAME'
       REM_EXMK='!'
      RUN TODAY
     ENDJOB
   /*** COMPLETE THE FAILED JOB ***/
   /*ESP AJ !MNFULLNAME COMPLETE APPL(!MNAPPL..!MNAPPLGEN)
   ENDDO

/*===== TEST DATA

IF (!MNAPPL EQ 'JCTEST44' AND -
    !MNFULLNAME EQ 'JCTEST44_OUTB_ASN_IDOCS_EDI_856' AND -
    !MNSUB# LT '4') THEN  -
  DO
     JOB RERUNIT.!MNJOB LINK PROCESS
      RUN TODAY
      RELDELAY 1
      ESP AJ !MNFULLNAME RESUBMIT APPL(!MNAPPL..!MNAPPLGEN)
     ENDJOB
   ENDDO

