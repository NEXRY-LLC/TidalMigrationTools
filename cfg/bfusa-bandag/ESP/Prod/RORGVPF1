APPL RORGVPF1 JOB_ANCESTOR_WAIT

TAG 'BANDAG'

NOTIFY FAILURE ABEND ALERT(REMD)

JCLLIB 'BANDAG.MVS.JCLLIB'
COPYJCL 'SYS3.ESP.COPYLIB'
TEMPLIB 'SYS3.ESP.TEMPLIB'
DOCLIB 'SYS3.ESP.DOCLIB'

IF !ESPAPSUB# > 1 THEN JCLLIB 'SYS3.ESP.COPYLIB'

OPTIONS RESTARTSTEP

JOB BKUPDVSA EXTERNAL SCOPE(-2:00)
  /*@@ SYSTEM=BANDAG
  RUN 1ST WORKDAY OF WEEK
  RELEASE ADD(RORGVPF1)
ENDJOB

JOB RORGVPF1
  /*@@ SYSTEM=BANDAG
  RESOURCE ADD(1,BANDAG)
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN 1ST WORKDAY OF WEEK
ENDJOB

