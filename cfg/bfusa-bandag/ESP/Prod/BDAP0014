/* LISTS VSAM VOLUMES THAT MEET CRITERIA FOR RORG

APPL BDAP0014 WAIT
TAG 'BANDAG'

NOTIFY FAILURE ABEND ALERT(REMD)

/* NOTIFY OVERDUE MAILBOX(MU-BLC-COMPUTERROOM)

JCLLIB 'BANDAG.MVS.JCLLIB'
COPYJCL 'SYS3.ESP.COPYLIB'
TEMPLIB 'SYS3.ESP.TEMPLIB'
DOCLIB 'SYS3.ESP.DOCLIB'

REXXON PROC
   CLANGVAR('!ESPAPJOB')"_NETC1='/*ROUTE PRINT N1LP1'"
REXXOFF

IF !ESPAPSUB# > 1 THEN JCLLIB 'SYS3.ESP.COPYLIB'

OPTIONS RESTARTSTEP

JOB BDAP0014
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN MON PLUS 0 WORKDAYS
  DELAYSUB 06:30 CENTRAL
  RELEASE ADD(BDAPN014)
ENDJOB

JOB BDAPN014
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN MON PLUS 0 WORKDAYS
ENDJOB

