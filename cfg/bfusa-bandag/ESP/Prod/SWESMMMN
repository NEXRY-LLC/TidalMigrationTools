APPL SWESMMMN JOB_ANCESTOR_WAIT

NOTIFY FAILURE ABEND ALERT(REMD)


JCLLIB 'BANDAG.MVS.JCLLIB'
COPYJCL 'SYS3.ESP.COPYLIB'

IF !ESPAPSUB# > 1 THEN JCLLIB 'SYS3.ESP.COPYLIB'

OPTIONS RESTARTSTEP

JOB SWESMMMN
  CCCHK RC(0:4) OK CONTINUE
  RUN DAILY
  RELEASE ADD(SWESMMSD)
ENDJOB

JOB SWESMMSD
  RUN DAILY
  RELEASE ADD(SWESMMFC)
ENDJOB

JOB SWESMMFC
  CCCHK RC(0:4) OK CONTINUE
  RUN DAILY
  NOTIFY JOBEND ALERT(SW01)
  NOTIFY FAILURE ABEND ALERT(REMD)
  RELEASE ADD(SWESMAFC)
ENDJOB

JOB SWESMAFC
  CCCHK RC(0:4) OK CONTINUE
  RUN DAILY
  NOTIFY JOBEND ALERT(SW01)
  NOTIFY FAILURE ABEND ALERT(REMD)
ENDJOB

