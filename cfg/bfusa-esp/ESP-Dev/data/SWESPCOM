APPL SWESPCOM WAIT

/*10/11/2015- JFC - CREATED APPL TO QUIESCE/RESTART AGENTS
/*10/11/2015- JFC - CREATED APPL

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*!USER2=AGENT NAME - ENTER THIS IN PARAMETER 2 WHEN TRIGGERING EVENT



JOB QUIESCE_AGENT_!USER2 LINK PROCESS
  ESP ESPCOM DEST(!USER2)
  RUN TODAY
  RELEASE ADD(RESTART_AGENT_!USER2)
ENDJOB

JOB RESTART_AGENT_!USER2 LINK PROCESS HOLD
  ESP ESPCOM DEST(!USER2)
  RUN TODAY
ENDJOB

