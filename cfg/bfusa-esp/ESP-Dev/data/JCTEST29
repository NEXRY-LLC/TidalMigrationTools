APPL JCTEST29 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*****************************************************/
/* TESTING LIE SLEEP PROCESS ON DS SERVER
/*****************************************************/

TAG TEST


JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(SLEEP_JOB_1)
ENDJOB

linux_JOB SLEEP_JOB_1
  AGENT LNX_DSRSAP01QAKR
  USER bodsadmin
  COMMAND /bin/sleep
  ARGS 3
  RUN DAILY
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

linux_JOB LIE.!ESPAPPL
  AGENT LNX_DSRSAP01QAKR
  USER bodsadmin
  COMMAND /bin/sleep
  ARGS 3
  RUN DAILY
  ABANDON DEPENDENCIES 16.00
   RELEASE ADD(LIE2.!ESPAPPL)
ENDJOB

JOB LIE2.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELDELAY 5
   ESP AJ ALL COMPLETE APPL(DSDNCDLH)
ENDJOB





