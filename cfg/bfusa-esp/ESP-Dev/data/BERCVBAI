APPL BERCVBAI WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*01/10/2020 -VMD- ADDED RUN STATEMENTS (JAN20) PER STAN HURST       */
/*********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)

JOB LNXFRBAI EXTERNAL SCOPE(-04:00)
  /*@@ SCHIDS: 001 002
    /*@@ IF_34
  RUN WEEKDAYS
  NORUN HOLIDAYS
  IF TODAY('JAN 20 2020') THEN RUN TODAY
  RELEASE ADD(BERCVBAI)
ENDJOB

JOB USERREQ.BEXFRBAI TASK DOCMEM(BEXFRBAI)
    RUN REF BEXFRBAI
  RELEASE ADD(BEXFRBAI)
ENDJOB

JOB BERCVBAI
  /*@@ SYSTEM=LAWSON
  CCCHK RC(1:4095) FAIL CONTINUE
  /*@@ CALENDAR=BK
  /*@@ SCHIDS: 001 002
    /*@@ IF_34
  RUN WEEKDAYS
  NORUN HOLIDAYS
  DELAYSUB 09:00
  IF TODAY('JAN 20 2020') THEN RUN TODAY
  IF TODAY('2ND WORKDAY OF MONTH')  AND -
   TODAY('NOT HOLIDAYS')  THEN DO
    DELAYSUB 10:00
  ENDDO
  RELEASE ADD(BEXFRBAI)
ENDJOB

JOB BEXFRBAI
  /*@@ SYSTEM=BAI
  CCCHK RC(1:4095) FAIL CONTINUE
  /*@@ CALENDAR=BK
  /*@@ SCHIDS: 001 002
    /*@@ IF_34
  RUN WEEKDAYS
  NORUN HOLIDAYS
  IF TODAY('JAN 20 2020') THEN RUN TODAY
ENDJOB

