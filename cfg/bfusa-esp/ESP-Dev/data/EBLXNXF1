APPL EBLXNXF1 WAIT

NOTIFY FAILURE ABEND ALERT(REMP)

JCLLIB 'FTRF.PRDJOBS'
COPYJCL 'SWS.ESP.COPYLIB'
TEMPLIB 'SWS.ESP.TEMPLIB'
DOCLIB 'SWS.ESP.DOCLIB'

IF !ESPAPSUB# > 1 THEN JCLLIB 'SWS.ESP.COPYLIB'

OPTIONS RESTARTSTEP

JOB EBLXNXF1
  /*@@ SYSTEM=LXNXF1
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN TODAY
  RELEASE ADD(EBLXNXFA)
ENDJOB

JOB EBLXNXFA
  /*@@ SYSTEM=LXNXF1
  CCCHK RC(3:4095) FAIL CONTINUE
  RUN TODAY
  RELEASE ADD(EBLXNXF1_FT) COND(RC(0))
  RELEASE ADD(CANCELF1) COND(RC(2))
ENDJOB

FILE_TRIGGER EBLXNXF1_FT
   AGENT CYBA_APPAAKFIS
   USER maestro
   FILENAME '\\ACZ1-AK-FIS\D$\ACCUZIP_WATCH\EBLXNXF1.TXT.ZIP' CREATE
   RELEASE ADD(EBLXNXF1_NT)
   RUN TODAY
ENDJOB

NT_JOB EBLXNXF1_NT
   AGENT CYBA_APPAAKFIS
   USER maestro
   CMDNAME D:\ACCUZIP\EBLXNXF1\START\GO.BAT
   ENVAR STDOUT=D:\ACCUZIP\REPORTFILES\EBLXNXF1.TXT
   RELEASE ADD(EBLXNXF2)
   RUN TODAY
ENDJOB

DSTRIG EBLXNXF2.NAFILE
  DSNAME 'EB.ZIP.EB700C.LXNX.FED.MTO.NAFILE' USER(FTPAUTO) ANYCLOSE
  RELEASE ADD(EBLXNXF2)
  RUN TODAY
ENDJOB

JOB CANCELF1 LINK PROCESS
  RUN TODAY
  ESP AJ EBLXNXF1_FT COMPLETE APPL(!ESPAPPL..!ESPAPGEN)
  ESP AJ EBLXNXF1_NT COMPLETE APPL(!ESPAPPL..!ESPAPGEN)
  ESP AJ EBLXNXF2.NAFILE COMPLETE APPL(!ESPAPPL..!ESPAPGEN)
ENDJOB

JOB EBLXNXF2
  /*@@ SYSTEM=LXNXF1
  CCCHK RC(2:4095) FAIL CONTINUE
  RUN TODAY
ENDJOB

