APPL EBLXNXS1 WAIT

NOTIFY FAILURE ABEND ALERT(REMP)

JCLLIB 'FTRF.PRDJOBS'
COPYJCL 'SWS.ESP.COPYLIB'
TEMPLIB 'SWS.ESP.TEMPLIB'
DOCLIB 'SWS.ESP.DOCLIB'

IF !ESPAPSUB# > 1 THEN JCLLIB 'SWS.ESP.COPYLIB'

OPTIONS RESTARTSTEP

JOB EBLXNXS1
  /*@@ SYSTEM=LXNXS1
  CCCHK RC(1:4095) FAIL CONTINUE
  RUN TODAY
  RELEASE ADD(EBLXNXSA)
ENDJOB

JOB EBLXNXSA
  /*@@ SYSTEM=LXNXS1
  CCCHK RC(2:4095) FAIL CONTINUE
  RUN TODAY
  RELEASE ADD(EBLXNXS1_FT) COND(RC(0))
  RELEASE ADD(CANCELS1) COND(RC(2))
ENDJOB

FILE_TRIGGER EBLXNXS1_FT
   AGENT CYBA_APPAAKFIS
   USER maestro
   FILENAME '\\ACZ1-AK-FIS\D$\ACCUZIP_WATCH\EBLXNXS1.TXT.ZIP' CREATE
   RELEASE ADD(EBLXNXS1_NT)
   RUN TODAY
ENDJOB

NT_JOB EBLXNXS1_NT
   AGENT CYBA_APPAAKFIS
   USER maestro
   CMDNAME D:\ACCUZIP\EBLXNXS1\START\GO.BAT
   ENVAR STDOUT=D:\ACCUZIP\REPORTFILES\EBLXNXS1.TXT
   RELEASE ADD(EBLXNXS2)
   RUN TODAY
ENDJOB

DSTRIG EBLXNXS2.NAFILE
  DSNAME 'EB.ZIP.EB700C.LXNX.SELS.MTO.NAFILE' USER(FTPAUTO) ANYCLOSE
  RELEASE ADD(EBLXNXS2)
  RUN TODAY
ENDJOB

JOB CANCELS1 LINK PROCESS
  RUN TODAY
  ESP AJ EBLXNXS1_FT COMPLETE APPL(!ESPAPPL..!ESPAPGEN)
  ESP AJ EBLXNXS1_NT COMPLETE APPL(!ESPAPPL..!ESPAPGEN)
  ESP AJ EBLXNXS2.NAFILE COMPLETE APPL(!ESPAPPL..!ESPAPGEN)
ENDJOB

JOB EBLXNXS2
  /*@@ SYSTEM=LXNXS1
  CCCHK RC(2:4095) FAIL CONTINUE
  RUN TODAY
ENDJOB

