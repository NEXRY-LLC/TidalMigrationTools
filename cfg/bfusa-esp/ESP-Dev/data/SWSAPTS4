APPL SWSAPTS4

/*NOTIFY ABEND FAILURE ALERT(REMD)*/
INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*******************************************************************
/*APPLICATION CREATED 09/09/2019 - DSG
/*TESTING REEXEC COMMAND
/********************************************************************

SAP_JOB Z_TEST_CYBERMATION_BFT030
   AGENT CYBB_BFT030
   SAPJOBNAME Z_TEST_CYBERMATION
   SAPJOBCLASS A
   STARTMODE ASAP
   SPOOLRECIPIENT 'grimmettdavi@bfusa.com'
   RECIPIENTTYPE INT
   RECIPIENTBCC NO
   RECIPIENTCC NO
   RUN TODAY
   RELDELAY 15
   ABAPNAME RSUSR000
   STEPUSER SAPADM
   ARCMODE PRINT
   LINES 50
   PRINTNEWSPOOL YES
   RELEASE (Z_TEST_CYBER2)
ENDJOB

SAP_JOB Z_TEST_CYBER2
   AGENT CYBB_BFT030
   SAPJOBNAME Z_TEST_CYBER2
   SPOOLRECIPIENT 'grimmettdavi@bfusa.com'
   RECIPIENTTYPE INT
   SAPJOBCLASS C
   STARTMODE ASAP
   BANNER D
   PRINTCOPIES 001
   RUN TODAY
   ABAPNAME RSUSR000
   STEPUSER SAPADM
   LANGUAGE E
   PRINTSPOOLNAME RSUSR000_SAP
   PRINTREL YES
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 144
   PRINTFORMAT X_PAPER
   RECIPIENT SAPADM
   PRINTDEPARTMENT Basis
   ARCMODE PRINT
   IF !ESPREEXEC#=0 THEN DELAYSUB NOW PLUS 30 MINUTES
   /*DELAYSUB REALNOW PLUS 30 MINUTES
   /*IF !ESPREEXEC#=0 THEN REEXEC AT('REALNOW PLUS 2 HOURS')
ENDJOB



