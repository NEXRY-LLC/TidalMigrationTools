/*NOTIFY END MAILBOX(OPSTEST)
NOTIFY FAILURE ABEND END ALERT(REMX)
NOTIFY FAILURE ABEND END MAILBOX(SCHEDULERS)

TAG NOQUOTESREQUIRED
TAG 'CANBEUPTO16CHARA'
TAG QUOTESORNOQUOTES
TAG TEST
/* 'YOUCANHAVELOTSOFTAGS,BUTESPWILLONLYRECOGNISETHELASTTAGSTATEMENT'
/* 'QUOTES ARE REQUIRED IF THERE IS A COMMA OR BLANK IN THE STATEMENT'
/* 'A TAG AT A JOB LEVEL TRUMPS THE APPL LEVEL TAG'
/* 16 CHARACTERS MAX

USER1 = '!USER1'
USER2 = '!USER2'
USER3 = '!USER3'
USER4 = '!USER4'
/*
S532 = 'YESTERDAY'
S911 = 'YESTERDAY'
POOP = 'YESTERDAY'

IF !USER2 = 532 THEN S532 = 'TODAY'
IF !USER2 = 911 THEN S911 = 'TODAY'
IF !USER2 = 'POOP' THEN POOP = 'TODAY'

JOB JCTEST01 LINK PROCESS REQUEST HOLD
  RUN !S532
  RUN EVERY 14 DAYS STARTING MAY 8 2015
  RUN !S911
  RUN !POOP
  RELEASE ADD(LIEJC.JCTEST01)
  RELEASE ADD(THE_NEXT_JOB_IN_THIS_APPL)
ENDJOB

JOB THIS.JOB.NAME.IS.NOT.TOO.LONG
  MEMBER USIEBR14
  TAG TESTJOBTAGHERE
  IF ESPSHH GT '01' AND TODAY('APR 14 2015') THEN-
       ESP AJ LIEJC.JCTEST01 COMPLETE APPL(JCTEST01.0)
  RUN !S532
  RELEASE ADD(THE_NEXT_JOB_IN_THIS_APPL)
  RELEASE ADD(APPL_TRIGGER_SWTSTJC2)
ENDJOB

JOB THE_NEXT_JOB_IN_THIS_APPL LINK PROCESS
  RUN !S532
  RUN !POOP
  RELEASE ADD(RELEASE_THE_KRAKEN)
ENDJOB

JOB APPL_TRIGGER_SWTSTJC2 LINK PROCESS
/*RUN !S532
  ESP TRIGGER SW01.SWTSTJC2 USER2('532')
  RELEASE ADD(HAPPY.NEW_YEAR_2)
ENDJOB

JOB RELEASE_THE_KRAKEN LINK PROCESS
  RUN !POOP
  RUN !S911
  IF TODAY('MAY 27,2015') THEN JOBATTR HOLD
  RELEASE ADD(JCTEST01_END)
ENDJOB

JOB JCTEST01_END LINK PROCESS
  RUN !S911
ENDJOB

JOB TESTINGA.PROMPT TASK PROCESS DOCMEM(TESTINGA)
   SEND 'THIS IS A TEST OF THE EMERGENCY SCHEDULING SYSTEM'
   RUN !S532
  RELEASE ADD(THE_NEXT_JOB_IN_THIS_APPL)
ENDJOB


