APPL SWSAPTS3
/**********************************/
/*APPLICATION CREATED 08/12/2014 - JFC*/
/*WE CAN USE THIS APPL TO ADD AND TEST SAP JOBS*/
/**********************************/
/*NOTIFY ABEND FAILURE ALERT(REMD)*/
INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

FILE_TRIGGER TEST_FILE_ON_DSRSAP01QAKR
   AGENT LNX_DSRSAP01PAKR
   FILENAME '/mnt/bods/hems/prod/outbound/+
     test.txt' CREATE NOCHANGE(1)
   RUN DAILY
   DUEOUT EXEC 08.50
   NOTIFY OVERDUE MAILBOX(CU_TEST) +
   SUBJECT('FILE XXXX HAS NOT ARRIVED!')
   RELEASE ADD(Z_TEST_CYBERMATION_BFT030)
ENDJOB

SAP_JOB Z_TEST_CYBERMATION_BFT030
   AGENT CYBB_BFT030
   SAPJOBNAME Z_TEST_CYBERMATION
   SAPJOBCLASS A
   STARTMODE ASAP
   SPOOLRECIPIENT 'grimmettdavi@bfusa.com'
   RECIPIENTTYPE INT
   RECIPIENTBCC NO
   RECIPIENTCC NO
   RUN DAILY
   ABAPNAME RSUSR000
   STEPUSER SAPADM
   ARCMODE PRINT
   LINES 50
   PRINTNEWSPOOL YES
   RELEASE (LIE.!ESPAPPL)
ENDJOB


