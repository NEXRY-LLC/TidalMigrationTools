APPL CF03

/**********************************************************************/
/* CREATED 01/16/2017 - JFC                                           */
/**********************************************************************/
/* -ALERT CREATED TO SEND NOIFICATION TO SUPPORT WITH COND CODES      */
/* -ALERT CREATED TO USE WITH APPLS CFTNIT01 AND CFDBAOP*             */
/**********************************************************************/
/**********************************************************************/
/* - JOB ENTRIES START HERE                                           */
/* - EACH ENTRY WILL CHECK THE RC OF THE JOB AND TRIGGER              */
/*   APPL CFNOTIFY WITH THE USER1,2,3 AND 4 VARIABLES IF RC = 3       */
/**********************************************************************/

IF (!MNAPPL EQ 'CFTNIT01' AND -
  !MNFULLNAME EQ 'SWESPJC2.CFNA.TEST' AND -
  !MNRC EQ '4') THEN -
DO
  ESP TR CF01.CFNOTIFY USER1(!MNFULLNAME) USER2(!MNAPPL) USER3(!MNRC)
ENDDO

IF (!MNAPPL EQ 'CFTNIT01' AND -
  !MNFULLNAME EQ 'CFNA_POST_DAILY_TRANS_TO_GL' AND -
  !MNRC EQ '3') THEN -
DO
  ESP TR CF01.CFNOTIFY USER1(!MNFULLNAME) USER2(!MNAPPL) USER3(!MNRC)
ENDDO

IF (!MNAPPL EQ 'CFTNIT01' AND -
  !MNFULLNAME EQ 'CFNA_ETL_NEW_TRANS_INBOUND' AND -
  !MNRC EQ '3') THEN -
DO
  ESP TR CF01.CFNOTIFY USER1(!MNFULLNAME) USER2(!MNAPPL) USER3(!MNRC)
ENDDO

IF (!MNAPPL EQ 'CFTNIT01' AND -
  !MNFULLNAME EQ 'CFNA_PROCESS_INBOUND_TRANS' AND -
  !MNRC EQ '3') THEN -
DO
  ESP TR CF01.CFNOTIFY USER1(!MNFULLNAME) USER2(!MNAPPL) USER3(!MNRC)
ENDDO

IF (!MNAPPL EQ 'CFTNIT01' AND -
  !MNFULLNAME EQ 'CFNA_PROCESS_DAILY_TRANS' AND -
  !MNRC EQ '3') THEN -
DO
  ESP TR CF01.CFNOTIFY USER1(!MNFULLNAME) USER2(!MNAPPL) USER3(!MNRC)
ENDDO

IF (!MNAPPL EQ 'CFTNIT01' AND -
  !MNFULLNAME EQ 'CFNA_POST_DAILY_TRANS' AND -
  !MNRC EQ '3') THEN -
DO
  ESP TR CF01.CFNOTIFY USER1(!MNFULLNAME) USER2(!MNAPPL) USER3(!MNRC)
ENDDO

IF (!MNAPPL EQ 'CFTLNSND' AND -
  !MNFULLNAME EQ 'CFNA_STAGE_LAWSON' AND -
  !MNRC EQ '0') THEN -
DO
  ESP TR CF01.CFNOTIFY USER1(!MNFULLNAME) USER2(!MNAPPL) USER3(!MNRC)
ENDDO

IF (!MNAPPL EQ 'CFTLNSND' AND -
  !MNFULLNAME EQ 'CFNA_CREATE_LAWSON_FILE' AND -
  !MNRC EQ '0') THEN -
DO
  ESP TR CF01.CFNOTIFY USER1(!MNFULLNAME) USER2(!MNAPPL) USER3(!MNRC)
ENDDO

IF (!MNAPPL EQ 'CFTLNSND' AND -
  !MNFULLNAME EQ 'CFNA_SEND_LAWSON_FILE' AND -
  !MNRC EQ '0') THEN -
DO
  ESP TR CF01.CFNOTIFY USER1(!MNFULLNAME) USER2(!MNAPPL) USER3(!MNRC)
ENDDO

