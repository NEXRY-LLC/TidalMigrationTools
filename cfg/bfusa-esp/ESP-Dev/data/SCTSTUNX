APPL SCTSTUNX WAIT

INVOKE 'SWS.ESP.APPL.TESTLIB(#DISTRIB)'

/*********************************************************************/
/*12/09/2016 -JFC- APPL TO TEST ESP AND SM36 ON UNIX                 */
/*********************************************************************/

AGENTNAME = ''
IF !USER1 = '' THEN !AGENTNAME = 'CYBB_BFT030'
IF !USER1 = 'BFP' THEN !AGENTNAME = 'CYBA_ISBFP3'
IF !USER1 = 'BFT' THEN !AGENTNAME = 'CYBA_ISBFT'
IF !USER1 = 'BFM' THEN !AGENTNAME = 'CYBA_ISBFM2'

USER = ''
IF !USER1 = '' THEN !USER = 'CYBB_BFT030'
IF !USER1 = 'BFP' THEN !USER = 'bfpadm'
IF !USER1 = 'BFT' THEN !USER = 'bftadm'
IF !USER1 = 'BFM' THEN !USER = 'bfmadm'

/*ENTER YOUR USER NAME IN USER2 PARAMETER FOR SPOOLFILE EMAIL


JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(SLEEP.!ESPAPPL)
ENDJOB

LINUX_JOB SLEEP.!ESPAPPL
  AGENT !AGENTNAME
  USER !user
  COMMAND /bin/sleep
  ARGS 3
  RUN DAILY
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN DAILY
ENDJOB


