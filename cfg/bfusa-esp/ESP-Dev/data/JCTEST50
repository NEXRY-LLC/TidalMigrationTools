APPL JCTEST50 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*****************************************************/
/* THIS IS A TEST OF THE ESP SCHEDULING SYSTEM       */
/*****************************************************/
TAG TEST

JOB LIS.!ESPAPPL LINK PROCESS
   RUN workdays
   RELEASE ADD(NTJOB1)
ENDJOB

NT_JOB NTJOB1
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\LinkedInEnd.cmd
  ARGS
  USER maestro
  EXITCODE 0-1 success
  RUN today
  RELEASE ADD(NOTIFY1.NTJOB1_ENDED_WITH_EXITCODE_1) COND(RC(0))
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB NOTIFY1.NTJOB1_ENDED_WITH_EXITCODE_1 LINK PROCESS CONDITIONAL
  RUN DAILY
  NOTIFY END MAILBOX(SCHEDULERS)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN weekdays
ENDJOB

