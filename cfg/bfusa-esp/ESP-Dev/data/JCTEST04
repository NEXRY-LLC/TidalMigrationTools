APPL JCTEST04 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*****************************************************/
/*****************************************************/
/*- TEST OF MVS JOB THAT WILL RETURN ANY CC FROM 0 - 16  */
/*- JUST ENTER THE CODE YOU WANT THE JOB TO END WITH
/*- INTO USER 1 PARAMETER FIELD WHEN TRIGGEREING THE EVENT
/*****************************************************/

NOTIFY ABEND ALERT(AR01)
NOTIFY LATE ALERT(LATE)
NOTIFY ABEND LATE MAILBOX(SCHEDULERS)

JOB LIS.!ESPAPPL link process
  RUN DAILY
  RELEASE ADD(JCTESTCC)
  RELEASE ADD(SWESP6ZZ)
ENDJOB

JOB JCTESTCC
  ECHO !USER1
  CCCHK RC(1:3) FAIL CONTINUE
  CCCHK RC(5:4095) FAIL CONTINUE
  DATASET 'FTRF.TSTJOBS'
  RUN DAILY
  RELEASE ADD(JOBNUMB2) COND(RC(0))
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB SWESP6ZZ
  ECHO !USER1
  DATASET 'FTRF.TSTJOBS'
  RUN DAILY
  RELEASE ADD(JOBNUMB2) COND(RC(0))
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB JOBNUMB2 link process
  RUN DAILY
  RELEASE ADD(JOBNUMB3) COND(RC(0))
ENDJOB

JOB JOBNUMB3 link process
  RUN DAILY
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL link process
  RUN DAILY
ENDJOB


