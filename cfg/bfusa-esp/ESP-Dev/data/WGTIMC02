APPL WGTIMC02 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/* 10/09/2018 -VMD- new appl created for testing
/*********************************************************************/

/*NOTIFY FAILURE ABEND ALERT(REMD)

JOB LIS.!ESPAPPL LINK PROCESS
   RELDELAY 5
   RUN DAILY
   RELEASE ADD(ZMMIMC02_F171_FILE_EXISTS)
ENDJOB

FILE_TRIGGER ZMMIMC02_F171_FILE_EXISTS
   AGENT CYBA_ISBFT
   FILENAME /data/BFT/interfaces/input/datain/ZMMIMC02_F171.txt CREATE
   RUN DAILY
   RELEASE ADD(ZMMIMC02_F171)
ENDJOB

SAP_JOB ZMMIMC02_F171
   AGENT CYBB_bft030
   SAPJOBNAME ZMMIMC02_F171
   SAPJOBCLASS C
   ABAPNAME ZMMIMC02
   VARIANT ZMMIMC02_F171
   STEPUSER SAPADM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTSPOOLNAME ZMMIMC02_SAP
   PRINTREL YES
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT SAPADM
   PRINTDEPARTMENT Basis
   ARCMODE PRINT
   RUN DAILY
   RELDELAY 1
   RELEASE ADD(ARCHIVE_ZMMIMC02_F171)
ENDJOB

UNIX_JOB ARCHIVE_ZMMIMC02_F171
   AGENT CYBA_ISBFT
   USER bftadm
   SCRIPTNAME /local/bin/arcfile.sh
   ARGS interfaces/input/datain/ZMMIMC02_F171.txt D
   RUN DAILY
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN DAILY
ENDJOB

APPLEND TRIGNEW1.!ESPAPPL
  ESPNOMSG TRIGGER !ESPEVENT ADD
ENDJOB

