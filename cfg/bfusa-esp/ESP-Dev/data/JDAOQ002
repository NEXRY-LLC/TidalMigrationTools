NOTIFY ABEND FAILURE ALERT(REMD)

FILE_TRIGGER ZSDJDA02_ZASP_ORDER_CREATE CONDITIONAL
   AGENT CYBB_BFT030
   FILENAME '/data/BFT/interfaces/input/datain/+
   ZSDJDA02_ZASP_SPLIT_ORDER_LIST.TXT' CREATE
   RUN DAILY
   RELEASE ADD(ZSDJDA02_ZASP_LINESPLIT_BFT)
ENDJOB

FILE_TRIGGER ZSDJDA06_CREATE CONDITIONAL
   AGENT CYBB_BFT030
   FILENAME '/data/BFT/interfaces/input/datain/ZSDJDA06.TXT' CREATE
   RUN DAILY
   RELEASE ADD(ZSDJDA02_ZASP_LINESPLIT_BFT)
ENDJOB

SAP_JOB ZSDJDA02_ZASP_LINESPLIT_BFT CONDITIONAL
   AGENT CYBB_BFT030
   SAPJOBNAME ZSDJDA02_ZASP_LINESPLIT_BFT
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZSDJDA02
   VARIANT ZASP_LINESPLIT
   STEPUSER SAPADM
   LANGUAGE E
   NOTIFY JOBSTART MAILBOX(JDAOP)
   PRINTCOPIES 001
   PRINTSPOOLNAME ZSDJDA02_SAP
   PRINTREL YES
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 255
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT SAPADM
   PRINTDEPARTMENT Basis
   ARCMODE PRINT
   NOTIFY JOBSTART MAILBOX(JDAOP)
   RUN DAILY
   RELEASE (ZSDJDA06_ZASP_ALERTS_BFT)
ENDJOB

SAP_JOB ZSDJDA06_ZASP_ALERTS_BFT CONDITIONAL
   AGENT CYBB_BFT030
   SAPJOBNAME ZSDJDA06_ZASP_ALERTS_BFT
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZSDJDA06
   VARIANT ZASP_ALERTS
   STEPUSER SAPADM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTSPOOLNAME ZSDJDA02_SAP
   PRINTREL YES
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 255
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT SAPADM
   PRINTDEPARTMENT Basis
   NOTIFY JOBEND MAILBOX(JDAOP)
   ARCMODE PRINT
   RUN DAILY
RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN TODAY
   IF ESPSHH = "01" THEN ABANDON DEPENDENCIES 11.00
   IF ESPSHH = "13" THEN ABANDON DEPENDENCIES 22.00
ENDJOB


