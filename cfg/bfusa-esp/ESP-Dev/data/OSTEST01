APPL OSTEST01 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*****************************************************/
/* TESTING JOBS ON ONESOURCE SERVERS FOR QA AND DEV
/*****************************************************/
/*ENTER THE SERVER IN USER 1 AND ENV IN USER2
IF USER1 = '' THEN !USER1 = 'APPTAX01'
IF USER2 = '' THEN !USER2 = 'DV'
AGENT1 = '!USER1._!USER2._LNX'

/*VALID ONESOURCE AGENTS ARE:
/*APPTAX01_DV_LNX
/*APPTAX02_DV_LNX
/*ORATAX01_DV_LNX
/*APPTAX01_QA_LNX
/*APPTAX02_QA_LNX
/*APPTAX03_QA_LNX
/*APPTAX04_QA_LNX
/*APPTAX05_QA_LNX
/*APPTAX06_QA_LNX
/*APPTAX07_QA_LNX
/*ORATAX01_QA_LNX
/*ORATAX01_QA_LNX
/*APPTAX01_PD_LNX
/*APPTAX02_PD_LNX
/*APPTAX03_PD_LNX
/*APPTAX04_PD_LNX
/*APPTAX05_PD_LNX
/*APPTAX06_PD_LNX
/*APPTAX07_PD_LNX
/*ORATAX01_PD_LNX
/*ORATAX01_PD_LNX


JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(SLEEP_JOB_1.!AGENT1)
ENDJOB

LINUX_JOB SLEEP_JOB_1.!AGENT1
  AGENT !AGENT1
  USER root
  COMMAND /bin/sleep
  ARGS 3
  RUN DAILY
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN DAILY
ENDJOB



