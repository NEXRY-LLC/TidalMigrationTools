APPL UXWBSRD WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*07/08/2018 -JFC- CLEANED UP PROC - ADDED LIE - NO OTHER CHANGES
/*  Removed NBUINCR step & cleaned up application - 05/20/2016 jre
/*********************************************************************/

NOTIFY ABEND FAILURE ALERT(REMD)

UNIX_JOB SXDDBWKL.SXDDB EXTERNAL APPLID(UXWBSXD)
   RUN SUN
   RELEASE ADD(LIS.!ESPAPPL)
ENDJOB

JOB LIS.!ESPAPPL LINK PROCESS
   RUN SUN
   EARLYSUB 19.00
   RELEASE ADD(STOTOMBO.SXDRPTBO)
ENDJOB

UNIX_JOB STOTOMBO.SXDRPTBO
   AGENT CYBA_SXDRPTBO
   SCRIPTNAME /local/bin/stop_tomcat_boe.sh
   USER root
   RUN SUN
   RELEASE ADD(STOTOMDS.SXDRPTDS)
ENDJOB

UNIX_JOB STOTOMDS.SXDRPTDS
   AGENT CYBA_SXDRPTDS
   SCRIPTNAME /local/bin/stop_tomcat_ds.sh
   USER root
   RUN SUN
   RELEASE ADD(SRDSTOPD.SXDRPTDB)
ENDJOB

UNIX_JOB SRDSTOPD.SXDRPTDB
   AGENT CYBA_SXDRPTDB
   SCRIPTNAME /local/bin/stop_db2_sbrx.sh
   ARGS SBRD
   USER root
   RUN SUN
   RELEASE ADD(SRDSTRTD.SXDRPTDB)
ENDJOB

UNIX_JOB SRDSTRTD.SXDRPTDB
   AGENT CYBA_SXDRPTDB
   SCRIPTNAME /local/bin/start_db2_sbrx.sh
   ARGS SBRD
   USER root
   RUN SUN
   RELDELAY 1
   RELEASE ADD(SRDDBWKL.SXDRPTDB)
ENDJOB

UNIX_JOB SRDDBWKL.SXDRPTDB
   AGENT CYBA_SXDRPTDB
   SCRIPTNAME /local/bin/db2_backup_sbrx.sh
   ARGS SBRD SBXRPT ONLINE
   USER root
   RUN SUN
   RELEASE ADD(SRDDBTRM.SXDRPTDB)
ENDJOB

UNIX_JOB SRDDBTRM.SXDRPTDB
   AGENT CYBA_SXDRPTDB
   SCRIPTNAME /local/bin/db2_trimbkup_sbrx.sh
   ARGS SBRD
   USER root
   RUN SUN
   RELEASE ADD(STATOMDS.SXDRPTDS)
ENDJOB

UNIX_JOB STATOMDS.SXDRPTDS
   AGENT CYBA_SXDRPTDS
   SCRIPTNAME /local/bin/start_tomcat_ds.sh
   RUN SUN
   USER root
   RELEASE ADD(STATOMBO.SXDRPTBO)
ENDJOB

UNIX_JOB STATOMBO.SXDRPTBO
   AGENT CYBA_SXDRPTBO
   SCRIPTNAME /local/bin/start_tomcat_boe.sh
   RUN SUN
   USER root
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN SUN
ENDJOB

