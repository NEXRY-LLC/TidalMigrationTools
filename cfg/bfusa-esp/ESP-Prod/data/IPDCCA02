   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   /*NORUN DAILY
   IF ESPSHH = '07' THEN RUN TODAY
   IF ESPSHH = '07' THEN EARLYSUB 12.05
   /*IF ESPSHH GT '13' THEN NORUN TODAY
ENDJOB


