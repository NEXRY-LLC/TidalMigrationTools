APPL QAMXSHIP WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/**********************************************************************/
/* 12/01/2016 -JFC- REMOVED CDC1 CONNECT DIRECT JOBS PER J. HRITZ     */
/**********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND MAILBOX(QAFAIL)
NOTIFY OVERDUE MAILBOX(SQLSHAREDSERVICES)
TAG PPIW

NT_JOB PRODUCTION_MX_CHECKSCMD EXTERNAL APPLID(QAMXPROD)
   RUN 2ND WORKDAY OF MONTH
   RELEASE ADD(LIS.QAMXSHIP)
ENDJOB

JOB LIS.QAMXSHIP LINK PROCESS
  RUN 2ND WORKDAY OF MONTH
  if user2 = 002 then run TODAY
  DELAYSUB 10.00
  RELEASE ADD(DTS_CONTROL_SHIPMENTS_MXCMD)
ENDJOB

NT_JOB DTS_CONTROL_SHIPMENTS_MXCMD
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\dts_control_shipments_mx.cmd
  ARGS 6
  USER maestro
  RUN 2ND WORKDAY OF MONTH
  RELEASE ADD(SHIPMENTS_MXCMD)
ENDJOB

NT_JOB SHIPMENTS_MXCMD
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\shipments_mx.cmd
  ARGS
  USER maestro
  RUN 2ND WORKDAY OF MONTH
  RELEASE ADD(SHIPMENTS_MX_CHECKSCMD)
ENDJOB

NT_JOB SHIPMENTS_MX_CHECKSCMD
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\shipments_mx_checks.cmd
  ARGS
  USER maestro
  RUN 2ND WORKDAY OF MONTH
  RELEASE ADD(LIE.QAMXSHIP)
ENDJOB

JOB LIE.QAMXSHIP LINK PROCESS
  RUN 2ND WORKDAY OF MONTH
  DUEOUT EXEC 16:00
ENDJOB

