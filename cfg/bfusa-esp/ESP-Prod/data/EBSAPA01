APPL EBSAPA01 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*12/02/2020 -ANK- SAP STATEMENTS RPD PROCESS PER MARK - INC0010729
/*********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMP)
NOTIFY OVERDUE ALERT(LATE)

JOB LIS.!ESPAPPL LINK PROCESS
    RELDELAY 1
    DELAYSUB 23.00
    RUN TODAY
    RELEASE ADD(EBSAPA01_ACS_DOM_FT)
    RELEASE ADD(EBSAPA01_ACS_CAN_FT)
ENDJOB

FILE_TRIGGER EBSAPA01_ACS_DOM_FT
    AGENT APPPLS02PAKR
    FILENAME 'D:\APPS\SAP\FILETRIGGER\RPD_ACS_DOM.txt' CREATE
    RUN TODAY
    RELEASE ADD(EBSAPA01_ACS_RPD)
ENDJOB

FILE_TRIGGER EBSAPA01_ACS_CAN_FT
    AGENT APPPLS02PAKR
    FILENAME 'D:\APPS\SAP\FILETRIGGER\RPD_ACS_CAN.txt' CREATE
    RUN TODAY
    RELEASE ADD(EBSAPA01_ACS_RPD)
ENDJOB

NT_JOB EBSAPA01_ACS_RPD
    AGENT APPPLS01PAKR
    USER bsprintuser
    CMDNAME E:\APPS\SAP\START\EBSAPACS_RPD.BAT
    ENVAR STDOUT=E:\APPS\SAP\REPORTFILES\EBSAPACS_RPD.TXT
    RUN TODAY
    RELEASE ADD(FOURHOURDELAY.!ESPAPPL)
ENDJOB

JOB FOURHOURDELAY.!ESPAPPL LINK PROCESS
    RELDELAY 120
    RUN TODAY
    RELEASE ADD(EBSAPA01_ZIPSEND_BAT)
ENDJOB

NT_JOB EBSAPA01_ZIPSEND_BAT
    AGENT APPPLS02PAKR
    USER bsprintuser
    CMDNAME D:\APPS\SAP\START\EBSAPACS_ZIPANDSEND.BAT
    ENVAR STDOUT=D:\APPS\SAP\REPORTFILES\EBSAPACS_ZIPANDSEND.TXT
    RUN TODAY
    RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
     RUN TODAY
     RELDELAY 5
ENDJOB


