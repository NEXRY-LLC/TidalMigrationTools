   RELEASE ADD(SWESPEMO.!ESPAPPL._EMAIL_NOFILE) COND(RC(1))
ENDJOB

FILE_TRIGGER EBFSBPI_FT
   AGENT APPPLS01PAKR
   FILENAME 'E:\APPS\FIRESTONE_BUILDING_PRODUCTS\FILETRIGGER\+
   BUILDINGPRODUCTSTRIGGER.TXT'
   RUN WEEKDAYS
   RELEASE ADD(EBFSBPI_CLEANUP)
ENDJOB

