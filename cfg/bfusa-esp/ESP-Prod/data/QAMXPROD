APPL QAMXPROD WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/**********************************************************************/
/* 12/01/2016 -JFC- REMOVED CDC1 CONNECT DIRECT JOBS PER J. HRITZ     */
/**********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND MAILBOX(QAFAIL)
NOTIFY OVERDUE MAILBOX(SQLSHAREDSERVICES)
TAG PPIW

JOB LIS.QAMXPROD LINK PROCESS
  RUN 2ND WORKDAY OF MONTH
  DELAYSUB 10.00
  RELEASE ADD(DTS_CONTROL_PRODUCTION_MXCMD)
ENDJOB

NT_JOB DTS_CONTROL_PRODUCTION_MXCMD
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\dts_control_production_mx.cmd
  ARGS 6
  USER maestro
  RUN 2ND WORKDAY OF MONTH
  RELEASE ADD(PRODUCTION_MXCMD)
ENDJOB

NT_JOB PRODUCTION_MXCMD
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\production_mx.cmd
  ARGS
  USER maestro
  RUN 2ND WORKDAY OF MONTH
  RELEASE ADD(PRODUCTION_MX_CHECKSCMD)
ENDJOB

NT_JOB PRODUCTION_MX_CHECKSCMD
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\production_mx_checks.cmd
  ARGS
  USER maestro
  RUN 2ND WORKDAY OF MONTH
  RELEASE ADD(LIE.QAMXPROD)
ENDJOB

JOB LIE.QAMXPROD LINK PROCESS
  RUN 2ND WORKDAY OF MONTH
  DUEOUT EXEC 16:00
ENDJOB

