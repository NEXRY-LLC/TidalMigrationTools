APPL QABFRC WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*07/06/2015 -JFC- CHANGED FROM RUN SUN ONLY PER DAVE REGUEIRO       */
/*12/27/2016 -JFC- ADDED JOB PER REMEDY INC 1178047                  */
/*02/15/2017 -JFC- DELETED SEVERAL JOBS PER INC 1178047              */
/*********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY LATE FAILURE ABEND MAILBOX(QAFAIL)
TAG PPIW
CRITPATH ON

NT_JOB VMSDOTCMD EXTERNAL APPLID(QAVMSDOT)
   RUN WEEKDAYS SUN
   RELEASE ADD(LIS.QABFRC)
ENDJOB

JOB LIS.QABFRC LINK PROCESS
   RUN DAILY
   EARLYSUB 01.00
   RELEASE ADD(VMSDOT_BFRC_EXPORTCMD)
ENDJOB

NT_JOB VMSDOT_BFRC_EXPORTCMD
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\vmsdot_bfrc_export.cmd
   ARGS
   USER maestro
   RUN DAILY
   RELEASE ADD(WHSE_PLT_XREF_BFRC_EXPORTCMD)
ENDJOB

NT_JOB WHSE_PLT_XREF_BFRC_EXPORTCMD
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\whse_plt_xref_bfrc_export.cmd
   ARGS
   USER maestro
   RUN DAILY
   RELEASE ADD(VMSDOT_BFRC_CONTROLCMD)
ENDJOB

NT_JOB VMSDOT_BFRC_CONTROLCMD
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\vmsdot_bfrc_control.cmd
   ARGS
   USER maestro
   RUN DAILY
   RELEASE ADD(VMSDOT_BFRC_CONTROL_EXPORTCMD)
ENDJOB

NT_JOB VMSDOT_BFRC_CONTROL_EXPORTCMD
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\vmsdot_bfrc_control_export.cmd
   ARGS
   USER maestro
   RUN DAILY
   RELEASE ADD(VMSDOT_BFRC_CONTROL_EXPORT_SCRIPTCMD)
ENDJOB

NT_JOB VMSDOT_BFRC_CONTROL_EXPORT_SCRIPTCMD
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\vmsdot_bfrc_control_export_script.cmd
   ARGS
   USER maestro
   RUN DAILY
   RELEASE ADD(DOT7_PSFTP_TO_RETAIL_STORES)
ENDJOB

NT_JOB DOT7_PSFTP_TO_RETAIL_STORES
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\dot7_psftp_to_retail_stores.bat
   ARGS
   USER maestro
   RUN DAILY
   DUEOUT EXEC 07:00
   RELEASE ADD(LIE.QABFRC)
ENDJOB

JOB LIE.QABFRC LINK PROCESS
   RUN DAILY
ENDJOB

