APPL QAMETADT WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND MAILBOX(QAFAIL1)
TAG PPIW

JOB LIS.QAMETADT LINK PROCESS
   RUN WEEKDAYS
   IF TODAY('JULY 14 2017') THEN JOBATTR HOLD
   EARLYSUB 23.59
   RELEASE ADD(PPIW_METADATA)
ENDJOB

NT_JOB PPIW_METADATA
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\ppiw_metadata.cmd
   ARGS
   USER maestro
   RUN WEEKDAYS
   RELEASE ADD(TBL_INFO_CHECKS)
   RELEASE ADD(COL_INFO_CHECKS)
   RELEASE ADD(SOU_TO_TRG_CHECKS)
   RELEASE ADD(QA_SCOPING_TBL_MAINT_RESP_CHECKS)
ENDJOB

NT_JOB TBL_INFO_CHECKS
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\tbl_info_checks.cmd
   ARGS
   USER maestro
   RUN WEEKDAYS
   RELEASE ADD(LIE.QAMETADT)
ENDJOB

NT_JOB COL_INFO_CHECKS
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\col_info_checks.cmd
   ARGS
   USER maestro
   RUN WEEKDAYS
   RELEASE ADD(LIE.QAMETADT)
ENDJOB

NT_JOB SOU_TO_TRG_CHECKS
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\sou_to_trg_checks.cmd
   ARGS
   RUN WEEKDAYS
   USER maestro
   RELEASE ADD(LIE.QAMETADT)
ENDJOB

NT_JOB QA_SCOPING_TBL_MAINT_RESP_CHECKS
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\qa_scoping_tbl_maint_resp_checks.cmd
   ARGS
   USER maestro
   RUN WEEKDAYS
   RELEASE ADD(LIE.QAMETADT)
ENDJOB

JOB LIE.QAMETADT LINK PROCESS
    RUN WEEKDAYS
ENDJOB

