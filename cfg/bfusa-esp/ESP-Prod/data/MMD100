NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY ABEND FAILURE OVERDUE MAILBOX(AJKRONJOBREQ)

JOB LIS.!ESPAPPL LINK PROCESS
    RUN WEEKDAYS
 /* NORUN SINGAPORE LESS 1 DAYS
    DELAYSUB 20.00
    RELEASE ADD(ZMMPOI03ACKSCP)
ENDJOB

UNIX_JOB ZMMPOI03ACKSCP REQUEST
    AGENT CYBA_ISBFP3
    USER sftpprod
    EXITCODE 0 SUCCESS
    EXITCODE 3-9999 FAILURE
    SCRIPTNAME /apps/ssh/bin/scp2.sh
ARGS get sftp1.bsaecomm.com:/GFM/A2S/SAP/Download/zmmpoi03_rubb+
          er_ext_ack.txt /data/BFP/interfaces/input/datain/zmmpo+
          i03_rubber_ext_ack.txt
    RESOURCE ADD(1,ISBFP3CD)
    NOTIFY FAILURE ABEND MAILBOX(MMD1XX)
    NOTIFY FAILURE ABEND ALERT(REMD)
    RUN WEEKDAYS
    RELEASE ADD(ZMMPOI04_ZEXTRACTDATE_UPD_03)
ENDJOB

SAP_JOB ZMMPOI04_ZEXTRACTDATE_UPD_03 REQUEST
    AGENT CYBB_BFP030
    SAPJOBNAME ZMMPOI04_ZEXTRACTDATE_UPD_03
    SAPUSER SAPADM
    SAPJOBCLASS C
    ABAPNAME ZMMPOI04
    VARIANT ZMMPOI03
    LANGUAGE E
    PRINTDEST CP21
    PRINTCOPIES 001
    EXPIRATION 8
    COLUMNS 132
    BANNER D
    RECIPIENT SAPADM
    ARCMODE PRINT
    RUN WEEKDAYS
    RELEASE ADD(ZMMPOI03_NATURAL_RUBBER_PO_EXT)
ENDJOB

SAP_JOB ZMMPOI03_NATURAL_RUBBER_PO_EXT
    AGENT CYBB_BFP030
    SAPJOBNAME ZMMPOI03_NATURAL_RUBBER_PO_EXT
    SAPUSER SAPADM
    SAPJOBCLASS C
    ABAPNAME ZMMPOI03
    VARIANT 'BFP NAT RUBBER'
    LANGUAGE E
    PRINTDEST CP21
    PRINTCOPIES 001
    EXPIRATION 8
    COLUMNS 132
    BANNER D
    RECIPIENT SAPADM
    ARCMODE PRINT
    RUN WEEKDAYS
    RELEASE ADD(ZMMP0I03SCP)
ENDJOB

UNIX_JOB ZMMP0I03SCP
    AGENT CYBA_ISBFP3
    USER sftpprod
    NOTIFY FAILURE ABEND MAILBOX(MMD1XX)
    NOTIFY FAILURE ABEND ALERT(REMD)
    SCRIPTNAME /apps/ssh/bin/scp2.sh
ARGS put /data/BFP/interfaces/output/dataout/zmmpoi03_rubber_ex+
          t.txt sftp1.bsaecomm.com:/GFM/A2S/SAP/Upload/zmmpoi03_+
          rubber_ext.txt
    RUN WEEKDAYS
    RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
    RUN WEEKDAYS
ENDJOB

