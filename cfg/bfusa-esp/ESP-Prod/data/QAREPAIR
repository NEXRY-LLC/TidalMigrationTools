APPL QAREPAIR WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND OVERDUE MAILBOX(QAFAIL1)
TAG PPIW

JOB WA2297S EXTERNAL SCOPE(-48.00)
  RUN THU SUN
  RELEASE ADD(LIS.QAREPAIR)
ENDJOB

JOB LIS.QAREPAIR LINK PROCESS
  RUN THU SUN
  DELAYSUB 01.00
  RELEASE ADD(REPAIR_TYPE_XREF)
ENDJOB

NT_JOB REPAIR_TYPE_XREF
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\repair_type_xref.cmd
  ARGS
  USER maestro
  RUN THU SUN
  RELEASE ADD(PPIW_REPAIR_TYPE_XREF_EXPORT)
ENDJOB

NT_JOB PPIW_REPAIR_TYPE_XREF_EXPORT
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\ppiw_repair_type_xref_export.cmd
  ARGS
  USER maestro
  RUN THU SUN
  RELEASE ADD(PPIW_REPAIR_TYPE_XREF_EXPORT_CTL)
ENDJOB

NT_JOB PPIW_REPAIR_TYPE_XREF_EXPORT_CTL
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\ppiw_repair_type_xref_export_ctl.cmd
  ARGS
  USER maestro
  RUN THU SUN
  DUEOUT EXEC 5AM
  RELEASE ADD(LIE.QAREPAIR)
ENDJOB

JOB LIE.QAREPAIR LINK PROCESS
  RUN THU SUN
ENDJOB

