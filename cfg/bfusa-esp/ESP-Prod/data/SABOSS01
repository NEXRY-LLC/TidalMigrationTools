AS400_JOB SA_BOSSC.BFBRPRO
  AGENT BFBRPRO
  CLPNAME TEBOSSCOM
  LIBL (MSBREXT MSPTFILE MSPTOBJ QGPL YOB610 QTEMP)
  JOBD MSPTOBJ/TESSJOBD
  RUN DAILY
  RELEASE ADD(BOSSCURETAM_SA_LOADBAT)
/*  RELEASE ADD(BOSSSAP_SA_LOADBAT)
ENDJOB

NT_JOB BOSSCURETAM_SA_LOADBAT
  AGENT WEB3AKATC
  CMDNAME D:\TESS_TO_BOSS\batch_files\ExecCureTamLoad_15.bat
  USER bfusa\maestro
  ARGS
  RUN DAILY
    NOTWITH BOSSSAP_AO_LOADBAT
    NOTWITH BOSSSAP_BL_LOADBAT
    NOTWITH BOSSSAP_88_LOADBAT
    NOTWITH BOSSSAP_CD_LOADBAT
    NOTWITH BOSSSAP_LV_LOADBAT
    NOTWITH BOSSSAP_8H_LOADBAT
    NOTWITH BOSSSAP_WN_LOADBAT
  RELEASE ADD(BOSSSAP_SA_LOADBAT)
ENDJOB

