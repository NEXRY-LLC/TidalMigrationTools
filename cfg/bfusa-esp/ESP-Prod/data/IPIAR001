JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(FSIP_ARIBA_REMOVE_MANUAL_INV)
ENDJOB

SAP_JOB FSIP_ARIBA_REMOVE_MANUAL_INV
   AGENT SAP_IZP100
   SAPJOBNAME ARIBA_REMOVE_MANUAL_INV
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZARIBA_REMOVE_MANUAL_INV
   VARIANT ARIBA_INV_M
   STEPUSER FSIP_BATCH
   LANGUAGE E
   PRINTDEST LOCL
   PRINTCOPIES 001
   PRINTSPOOLNAME ZARIBA_REMOV
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_65_80
   BANNER D
   RECIPIENT FSIP_BATCH
   ARCMODE PRINT
   RUN TODAY
   RELEASE (FSIP_REPROCESS_ARIBA_INV_ERR)
ENDJOB

