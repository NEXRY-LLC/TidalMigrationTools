APPL IPD001 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*07/11/2018 -JFC- CLEANED UP PROC - ADDED LIE - NO OTHER CHANGES
/*********************************************************************/

NOTIFY ABEND FAILURE ALERT(REMD)

JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(ZIP_ELGCUST_UPD_AGREEMENTS)
ENDJOB

SAP_JOB ZIP_ELGCUST_UPD_AGREEMENTS
   AGENT CYBB_BFP030
   SAPJOBNAME ZIP_ELGCUST_UPD_AGREEMENTS
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZIP_ELGCUST_UPD
   VARIANT ELGCUST
   STEPUSER SAPADM
   LANGUAGE E
   PRINTDEST CP21
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   BANNER D
   RECIPIENT SAPADM
   ARCMODE PRINT
   PRINTCOPIES 001
   RUN DAILY
   DELAYSUB 19.00
   IF TODAY('SUNDAY') THEN EARLYSUB 16:00
   RELEASE ADD(ZIP_ELGMATL_UPD_AGREEMENTS)
ENDJOB

SAP_JOB ZIP_ELGMATL_UPD_AGREEMENTS
   AGENT CYBB_BFP030
   SAPJOBNAME ZIP_ELGMATL_UPD_AGREEMENTS
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZIP_ELGMATL_UPD
   VARIANT ELGMATL
   STEPUSER SAPADM
   LANGUAGE E
   PRINTDEST CP21
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   BANNER D
   RECIPIENT SAPADM
   ARCMODE PRINT
   PRINTCOPIES 001
   RUN DAILY
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN DAILY
ENDJOB

