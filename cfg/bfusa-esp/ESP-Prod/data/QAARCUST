APPL QAARCUST WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/**********************************************************************/
/* 11/21/2016 -JFC- REMOVED CDC1 CONNECT DIRECT JOBS PER J. HRITZ     */
/**********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND MAILBOX(QAFAIL)
TAG PPIW

NT_JOB ITEM_MASTER_ARCMD EXTERNAL APPLID(QAARITEM)
  RUN WED FRI
  RELEASE ADD(LIS.QAARCUST)
ENDJOB

JOB LIS.QAARCUST LINK PROCESS
  RUN WED FRI
  DELAYSUB 10.30
  RELEASE ADD(DTS_CONTROL_CUSTOMER_MASTER_ARCMD)
ENDJOB

NT_JOB DTS_CONTROL_CUSTOMER_MASTER_ARCMD
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\dts_control_customer_master_ar.cmd
  ARGS 6
  USER maestro
  RUN WED FRI
  RELEASE ADD(CUSTOMER_MASTER_ARCMD)
ENDJOB

NT_JOB CUSTOMER_MASTER_ARCMD
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\customer_master_ar.cmd
  ARGS
  USER maestro
  RUN WED FRI
  RELEASE ADD(CUSTOMER_MASTER_AR_CHECKSCMD)
ENDJOB

NT_JOB CUSTOMER_MASTER_AR_CHECKSCMD
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\customer_master_ar_checks.cmd
  ARGS
  USER maestro
  RUN WED FRI
  RELEASE ADD(CUSTOMER_MASTER_AR_DELETED_CHECKSCMD)
ENDJOB

NT_JOB CUSTOMER_MASTER_AR_DELETED_CHECKSCMD
  AGENT CYBA_PPIWPROD
  CMDNAME X:\cmd_scripts\customer_master_ar_deleted_checks.cmd
  ARGS 6
  USER maestro
  RUN WED FRI
  RELEASE ADD(LIE.QAARCUST)
ENDJOB

JOB LIE.QAARCUST LINK PROCESS
  RUN WED FRI
ENDJOB


