APPL WGMAXIMO WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*05/09/2018 -JFC- NEW APPLICATION TO REPLACE MMD031WI AND MMD034WI  */
/*05/15/2019 -JFC- COPIED OLD PROC TO SWS.ESP.APPL.PROCLIB.OLD       */
/*05/15/2019 -JFC- REMOVED CD STEPS PER INC000001929431              */
/*********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY ABEND FAILURE OVERDUE MAILBOX(AJKRONJOBREQ)

JOB BFPULOCK EXTERNAL APPLID(SUNMAINT) SCOPE(-04)
  RUN SUN
  RELEASE ADD(LIS.!ESPAPPL)
ENDJOB

JOB LIS.!ESPAPPL LINK PROCESS
  RUN DAILY
  DELAYSUB 00.30
  RELEASE ADD(ZMMIMI05_MAXIMO_MOVEMENTS_F171)
  RELEASE ADD(ZMMIMI06_MAXIMO_INVENTORY_F171)
ENDJOB

SAP_JOB ZMMIMI05_MAXIMO_MOVEMENTS_F171
  SAPUSER SAPADM
  AGENT CYBB_BFP030
  SAPJOBNAME ZMMIMI05_MAXIMO_MOVEMENTS_F171
  SAPJOBCLASS C
  ABAPNAME ZMMIMI05
  VARIANT 'F171 MAXIMO'
  LANGUAGE E
  PRINTDEST DZ01
  PRINTCOPIES 001
  PRINTIMMED YES
  EXPIRATION 8
  COLUMNS 192
  BANNER D
  RECIPIENT LOVITTRON
  ARCMODE PRINT
  RUN DAILY
  RELEASE ADD(ARF171MRO_MVTCD)
ENDJOB

UNIX_JOB ARF171MRO_MVTCD
  AGENT CYBA_ISBFP3
  USER bfpadm
  SCRIPTNAME /local/bin/arcfile.sh
  ARGS interfaces/output/dataout/zmmimi05_iod_mro_mvt_F171 D
  RUN DAILY
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

SAP_JOB ZMMIMI06_MAXIMO_INVENTORY_F171
  SAPUSER SAPADM
  AGENT CYBB_BFP030
  SAPJOBNAME ZMMIMI06_MAXIMO_INVENTORY_F171
  SAPJOBCLASS C
  ABAPNAME ZMMIMI06
  VARIANT 'F171 MAXIMO'
  LANGUAGE E
  PRINTDEST DZ01
  PRINTCOPIES 001
  PRINTIMMED YES
  EXPIRATION 8
  COLUMNS 132
  BANNER D
  RECIPIENT LOVITTRON
  ARCMODE PRINT
  RUN DAILY
  RELEASE ADD(ARF171MRO_INVCD)
ENDJOB

UNIX_JOB ARF171MRO_INVCD
  AGENT CYBA_ISBFP3
  USER bfpadm
  SCRIPTNAME /local/bin/arcfile.sh
  ARGS interfaces/output/dataout/zmmimi06_iod_mro_in_F171 D
  RUN DAILY
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
  RUN DAILY
ENDJOB

