NOTIFY ABEND FAILURE ALERT(REMD)
TAG 'OTC CRITICAL'

SAP_JOB ZDELVWRAPSPLIT_DC_EST_IN_LEW055PE EXTERNAL APPLID(LEW055PE) +
SCOPE(-6)
   RUN FRI
   IF TODAY('FRI') AND ESPSHH GT '06' THEN NORUN TODAY
   RELEASE ADD(ZDELVWRAPSPLIT_DC_EST_IN_LED018DE)
   RELEASE ADD(ZSDLEI06_SHP_BLK_REASON_RMV_DE)
ENDJOB

JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(ZDELVWRAPSPLIT_DC_EST_IN_LED018DE)
   RELEASE ADD(ZSDLEI06_SHP_BLK_REASON_RMV_DE)
ENDJOB

SAP_JOB ZDELVWRAPSPLIT_DC_EST_IN_LED018DE
   AGENT CYBB_BFP030
   SAPJOBNAME ZDELVWRAPSPLIT_DC_EST
   SAPJOBCLASS A
   STARTMODE ASAP
   ABAPNAME ZDELVWRAPSPLIT
   VARIANT ZLESO_DC_EAST
   STEPUSER SAPADM
   LANGUAGE E
   PRINTDEST CP21
   PRINTCOPIES 001
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   BANNER D
   RECIPIENT SAPADM
   ARCMODE PRINT
   RUN DAILY
   NOTWITH (ZSDLEI06_SHP_BLK_REASON_RMV_BLK.-)
   DUEOUT EXEC REALNOW PLUS 20 MINUTES
   NOTIFY OVERDUE MAILBOX(LED018XX)
   NOTIFY ABEND FAILURE ALERT(REMD)
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

SAP_JOB ZSDLEI06_SHP_BLK_REASON_RMV_DE
   AGENT CYBB_BFP030
   SAPJOBNAME ZSDLEI06_SHP_BLK_REASON_RMV_DE
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZSDLEI06_SHP_BLK_REASON
   VARIANT ZLESO_DC_EAST
   STEPUSER SAPADM
   LANGUAGE E
   PRINTDEST CP21
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   BANNER D
   RECIPIENT SAPADM
   ARCMODE PRINT
   PRINTCOPIES 001
   RUN DAILY
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN DAILY
   DUEOUT EXEC NOW PLUS 1 HOUR
ENDJOB


