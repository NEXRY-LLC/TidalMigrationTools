APPL SWESMXDM JOB_ANCESTOR_WAIT

NOTIFY FAILURE ABEND ALERT(REMD)

CCCHK RC(1:4095) FAIL CONTINUE

JCLLIB 'BANDAG.MVS.JCLLIB'
COPYJCL 'SYS3.ESP.COPYLIB'

IF !ESPAPSUB# > 1 THEN JCLLIB 'SYS3.ESP.COPYLIB'

OPTIONS RESTARTSTEP

IF !ESPTRUSR NE '' THEN
  DO
    RESOURCE ADD(1,CALL_ROY_BEFORE_RUNNING-DO_NOT_POST)
  ENDDO

JOB SWESMMBK LINK PROCESS
 DELAYSUB 8:00 AM CENTRAL
  ESP OPER BKUPHIST HIST1
  ESP OPER BKUPEVS EVENT1
  ESP OPER BKUPINDX
  ESP OPER BKUPJNDX
  ESP OPER BKUPUDEF
  ESP OPER BKUPJSTS
 RUN DAILY
 RELEASE ADD(SWESMMSP)
ENDJOB

JOB SWESMMSP LINK PROCESS
  ESP OPER SPINLOG
  RUN DAILY
  RELEASE ADD(SWESMASP)
ENDJOB

JOB SWESMASP
  RUN DAILY
  RELEASE ADD(SWESMMBU)
ENDJOB

JOB SWESMMBU
  RUN DAILY
  RELEASE ADD(SWESMMB2)
ENDJOB

JOB SWESMMB2
CCCHK RC(5:4095) FAIL CONTINUE
  RUN DAILY
  RELEASE ADD(SWESMXBU)
ENDJOB

JOB SWESMXBU
  RUN DAILY
  RELEASE ADD(BDAP0022)
ENDJOB

JOB BDAP0022
  RUN WORKDAYS
  RELEASE ADD(SWEXMMPU)
ENDJOB

JOB SWEXMMPU
  RUN DAILY
  RELEASE ADD(SWESMMMB)
  RELEASE ADD(SWESMMHS)
  RELEASE ADD(SWESMMPA)
ENDJOB

JOB SWESMMMB
  RUN 15TH DAY OF MONTH
ENDJOB

JOB SWESMMPA
  RUN 15TH DAY OF MONTH
ENDJOB

JOB SWESMMHS
  RUN SATURDAY
ENDJOB

