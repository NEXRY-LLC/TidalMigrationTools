APPL BPSP1060 JOB_ANCESTOR_WAIT
  RESOURCE ADD(1,BANDAG)
TAG 'BANDAG'

NOTIFY FAILURE ABEND ALERT(REMD)

JCLLIB 'BANDAG.MVS.JCLLIB'
COPYJCL 'SYS3.ESP.COPYLIB'
TEMPLIB 'SYS3.ESP.TEMPLIB'
DOCLIB 'SYS3.ESP.DOCLIB'

IF !ESPAPSUB# > 1 THEN JCLLIB 'SYS3.ESP.COPYLIB'

OPTIONS RESTARTSTEP

JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(BPSP1060)
ENDJOB

JOB BPSP1060
  /*@@ SYSTEM=BANDAG
  CCCHK RC(1) FAIL CONTINUE
  CCCHK RC(3:4095) FAIL CONTINUE
  RUN TODAY
  RELEASE ADD(LIE.!ESPAPPL)
  RELEASE ADD(CC2.!ESPAPPL) COND(RC(2))
ENDJOB

JOB CC2.!ESPAPPL LINK PROCESS
   RUN TODAY
   NOTIFY JOBEND MAILBOX(BPSP1060) +
   SUBJECT('BPSP1060 ENDED IN A CC2')
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN TODAY
ENDJOB
