APPL BNDL002N JOB_ANCESTOR_WAIT
TAG 'BANDAG'

NOTIFY FAILURE ABEND ALERT(REMD)

JCLLIB 'BANDAG.MVS.JCLLIB'
COPYJCL 'SYS3.ESP.COPYLIB'
TEMPLIB 'SYS3.ESP.TEMPLIB'
DOCLIB 'SYS3.ESP.DOCLIB'

IF !ESPAPSUB# > 1 THEN JCLLIB 'SYS3.ESP.COPYLIB'

OPTIONS RESTARTSTEP

JOB BNDL002N
  /*@@ SYSTEM=BANDAG
  CCCHK RC(5:4095) FAIL CONTINUE
  RESOURCE ADD(1,BANDAG)
  RUN WORKDAYS
  RELEASE ADD(FTP279)
ENDJOB

JOB FTP279
  /*@@ SYSTEM=BANDAG
  CCCHK RC(1:4095) FAIL CONTINUE
  RESOURCE ADD(1,BANDAG)
/*RUN FIRST WORKDAY OF MONTH
/*IF TODAY('MON TUE WED THU FRI') AND ESPSHH GT '09' +
  IF TODAY('FIRST WORKDAY OF MONTH') AND ESPSHH EQ '07' +
  THEN RUN TODAY
ENDJOB

