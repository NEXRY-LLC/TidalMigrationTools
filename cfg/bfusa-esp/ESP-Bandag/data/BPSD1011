APPL BPSD1011 JOB_ANCESTOR_WAIT
  RESOURCE ADD(1,BANDAG)
TAG 'BANDAG'

/* THIS IS A DUPLICATE OF APPL BPSP1011.                            */
/* BPSD1011 WILL RUN AT 12.00 N ON TUE, WED, THU, AND FRI.          */
/* THIS JOB IS NEEDED BECAUSE REGULAR (BPSP1011) IS REQUESTED BY    */
/* USERS THROUGH OUT THE WEEK                                       */

NOTIFY FAILURE ABEND ALERT(REMD)

JCLLIB 'BANDAG.MVS.JCLLIB'
COPYJCL 'SYS3.ESP.COPYLIB'
TEMPLIB 'SYS3.ESP.TEMPLIB'
DOCLIB 'SYS3.ESP.DOCLIB'

IF !ESPAPSUB# > 1 THEN JCLLIB 'SYS3.ESP.COPYLIB'

OPTIONS RESTARTSTEP


JOB BPSP1011
  /*@@ SYSTEM=BANDAG
  CCCHK RC(8:4095) FAIL CONTINUE
  RUN TUE WED THU FRI
  DELAYSUB 12.00 CENTRAL
ENDJOB

