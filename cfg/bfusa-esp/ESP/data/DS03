APPL DS03 JOB_ANCESTOR_WAIT

/* ALERT FOR 1ST JOB IN DSDJDA01 WHEN IT RUNS LONGER THAN 10 MINUTES
/* ALERT FOR APPL DSDJDA01 WHEN IT RUNS LONGER THAN 30 MINUTES
/* WILL GENERATE CONSOLE MESSSGAE TO CONTACT D. WILLARD IMMEDIATELY.

JCLLIB 'FTRF.PRDJOBS'
COPYJCL 'SWS.ESP.COPYLIB'
TEMPLIB 'SWS.ESP.TEMPLIB'
DOCLIB 'SWS.ESP.DOCLIB'

IF !ESPAPSUB# > 1 THEN JCLLIB 'SWS.ESP.COPYLIB'

OPTIONS RESTARTSTEP

IF !MNAPPL = 'JDAOQ001' OR -
   !MNAPPL = 'BPMDJE02' OR -
   !MNAPPL = 'BPDDJE01' OR -
   !MNAPPL = 'JDAOQ008' OR -
   !MNAPPL = 'JDAOQ002' THEN -
  DO
    ESP AJ ALL COMPLETE APPL(!MNAPPL..!MNAPPLGEN)
  ENDDO

IF (!MNAPPL EQ 'JDAOQ001') THEN -
  DO
    ESP AJ ALL COMPLETE APPL(JDAOQ001.0)
  ENDDO

IF (!MNAPPL EQ 'DSDHYBRS') THEN -
  DO
    ESP AJ ALL COMPLETE APPL(DSDHYBRS.0)
  ENDDO

IF (!MNAPPL EQ 'SWSAPTST') THEN -
  DO
    ESP AJ ALL COMPLETE APPL(SWSAPTST.0)
  ENDDO

