APPL LED080 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*04/10/2018 -JFC- ADDED APPLEND AND MODIFIED EVENT STATEMENTS
/*08/08/2019 -JFC- ADDED OVERDUE ALERT STATEMENT                     */
/*********************************************************************/

NOTIFY ABEND FAILURE ALERT(REMD)
NOTIFY OVERDUE ALERT(LATE)
NOTIFY OVERDUE MAILBOX(LEDXXX) ALERT(LE01)
TAG 'OTC CRITICAL'

SAP_JOB RBDAPP01_INT50_SHIPMENT_CREATION
   AGENT CYBB_BFP030
   SAPJOBNAME RBDAPP01_INT50_SHIPMENT_CREATION
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME RBDAPP01
   VARIANT ZLE_INT50
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTREL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 152
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   RUN DAILY
   RELDELAY 5
   RELEASE ADD(ZSDLEI54_ZTLD_ZDDP_SHIPMENT_CREA)
ENDJOB

SAP_JOB ZSDLEI54_ZTLD_ZDDP_SHIPMENT_CREA
   AGENT CYBB_BFP030
   SAPJOBNAME ZSDLEI54_ZTLD_ZDDP_SHIPMENT_CREA
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZSDLEI54
   VARIANT ZSDLEI54_CREAT
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTREL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   RUN DAILY
   DUEOUT EXEC REALNOW PLUS 20 MINUTES
ENDJOB

APPLEND TRIGNEW1.!ESPAPPL
  ESPNOMSG TRIGGER !ESPEVENT ADD
  IF TODAY('SUN') AND ESPSHH GT '19' THEN NORUN TODAY
ENDJOB


