NOTIFY ABEND FAILURE ALERT(REMD)

JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(JDA_ZOP_RE_RI_DELIVERY)
   RELEASE ADD(JDA_ZOP_RE_RI_SALESDOC)
ENDJOB

SAP_JOB JDA_ZOP_RE_RI_SALESDOC
   AGENT CYBB_BFP030
   SAPJOBNAME JDA_ZOP_RE_RI_SALESDOC
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME /JDAOP/ZOP_RE_RI
   VARIANT SALESDOC
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTSPOOLNAME /JDAOP/ZOP_R
   PRINTREL YES
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   RUN DAILY
   IF TODAY('SUN') AND ESPSHH GT '19' THEN NORUN TODAY
   NOTIFY FAILURE EVENT(SW01.RESUBJOB)
   NOTIFY ABEND FAILURE ALERT(REMD)
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

SAP_JOB JDA_ZOP_RE_RI_DELIVERY
   AGENT CYBB_BFP030
   SAPJOBNAME JDA_ZOP_RE_RI_DELIVERY
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME /JDAOP/ZOP_RE_RI
   VARIANT DELIVERY
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   PRINTCOPIES 001
   PRINTSPOOLNAME /JDAOP/ZOP_R
   PRINTREL YES
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   PRINTFORMAT X_PAPER
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   RUN DAILY
   IF TODAY('SUN') AND ESPSHH GT '19' THEN NORUN TODAY
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN DAILY
   DUEOUT EXEC NOW PLUS 4 HOURS
ENDJOB

