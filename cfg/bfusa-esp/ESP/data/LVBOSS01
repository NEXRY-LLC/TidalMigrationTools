  AGENT CYBA_CDC1AKFIS
  CMDNAME D:\dts_run\batchfiles\boss\SAPLOAD\BOSSSAP_LV_LOAD.BAT
  ARGS
  USER bfusa\maestro
  RUN DAILY
    NOTWITH BOSSSAP_81_LOADBAT
