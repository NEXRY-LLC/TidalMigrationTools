APPL QAPRDORG WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/**********************************************************************/
/*10/18/2016-JFC-CONVERTED LIE JOB FROM MVS TO NT                     */
/**********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND MAILBOX(QAFAIL)
NOTIFY OVERDUE MAILBOX(SQLSHAREDSERVICES)
TAG PPIW
CRITPATH ON

NT_JOB PRODUCTION_DETAIL_CHECKS EXTERNAL APPLID(QAPRDDTL)
   RUN 2ND WORKDAY OF MONTH
   RELEASE ADD(PRODUCTION_ITEM_ORIGINATION)
ENDJOB

JOB LIS.QAPRDORG LINK PROCESS
   RUN 2ND WORKDAY OF MONTH
   EARLYSUB 19.00
   RELEASE ADD(PRODUCTION_ITEM_ORIGINATION)
ENDJOB

NT_JOB PRODUCTION_ITEM_ORIGINATION
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\production_item_origination.cmd
   USER maestro
   RUN 2ND WORKDAY OF MONTH
   RELEASE ADD(PRODUCTION_ITEM_ORIGINATION_CHECKS)
ENDJOB

NT_JOB PRODUCTION_ITEM_ORIGINATION_CHECKS
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\production_item_origination_checks.cmd
   USER maestro
   RUN 2ND WORKDAY OF MONTH
   RELEASE ADD(PRODUCTION_CONSOLIDATED)
ENDJOB

NT_JOB PRODUCTION_CONSOLIDATED
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\production_consolidated.cmd
   USER maestro
   RUN 2ND WORKDAY OF MONTH
    DUEOUT EXEC 23:00
   RELEASE ADD(LIE.QAPRDORG)
ENDJOB

NT_JOB LIE.QAPRDORG
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\LinkedInEnd.cmd
   USER maestro
   RUN 2ND WORKDAY OF MONTH
ENDJOB

