     IF TODAY('OCT 14 2018') THEN JOBATTR HOLD
  RELEASE ADD(BRMDLYOFF.AKNITS)
ENDJOB

AS400_JOB BRMDLYOFF.AKNITS
  PRIORITY 16
  RESOURCE ADD(1,TAPMLB01) HOLD
   IF TODAY('APR 25 2016') THEN RESOURCE ADD(1,TAPMLB02) HOLD
  AGENT AKNITS
  COMMAND CYBROBOT2 BRMDLYOFF
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
   RELDELAY 2
    NORUN MAR 10 2013
     IF TODAY('JUL 02 2017') THEN JOBATTR HOLD
  RELEASE ADD(BRMDLYRPT.AKNITS)
  RELEASE ADD(BRMDLYONS.AKNITS)
ENDJOB

