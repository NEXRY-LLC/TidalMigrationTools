NOTIFY ABEND FAILURE ALERT(REMD)

UNIX_JOB ARCBLD2P2 EXTERNAL APPLID(BLD2P2D2) SCOPE(-04.00)
   RUN DAILY EXCEPT MON
   RELEASE ADD(LIS.!ESPAPPL)
ENDJOB

JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY EXCEPT MON
   RELEASE ADD(ZZFIARI05_INVOICES_TO_ENT)
   RELEASE ADD(ZZFIARI05_INVOICES_TO_HRC,ZZFIARI05_HRC_DATE)
ENDJOB

SAP_JOB ZZFIARI05_INVOICES_TO_ENT
   AGENT CYBB_BFP030
   CHILDMONITOR YES
   SAPJOBNAME ZZFIARI05_INVOICES_TO_ENT
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZZFIARI05
   VARIANT DAILY
   STEPUSER SAPADM
   LANGUAGE E
   PRINTDEST CP21
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   RECIPIENT SAPADM
   ARCMODE PRINT
   BANNER D
   PRINTCOPIES 001
   RUN DAILY EXCEPT MON
   RELEASE ADD(RESUME.ARD002TR)
ENDJOB

SAP_JOB ZZFIARI05_INVOICES_TO_HRC
   AGENT CYBB_BFP030
   CHILDMONITOR YES
   SAPJOBNAME ZZFIARI05_INVOICES_TO_HRC
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZZFIARI05
   VARIANT DAILY_HRC
   STEPUSER SAPADM
   LANGUAGE E
   PRINTDEST CP21
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   RECIPIENT SAPADM
   ARCMODE PRINT
   RELEASE (RESUME.ARD002TR)
   BANNER D
   PRINTCOPIES 001
   RUN DAILY EXCEPT MON
ENDJOB

JOB RESUME.ARD002TR LINK PROCESS
   RELDELAY  1
   RUN DAILY EXCEPT MON
   ESP RESUME AR01.ARD002TR
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN DAILY EXCEPT MON
   DUEOUT EXEC NOW PLUS 9 HOURS
ENDJOB

SAP_JOB ZZFIARI05_HRC_DATE
   AGENT CYBB_BFP030
   SAPJOBNAME ZZFIARI05_HRC_DATE
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZFIARI05_HRC_DATE
   VARIANT HRC_DAILY
   STEPUSER SAPADM
   LANGUAGE E
   PRINTDEST LOCL
   PRINTSPOOLNAME ZFIARI05_HRC
   PRINTIMMED YES
   PRINTREL YES
   PRINTNEWSPOOL YES
   EXPIRATION 8
   LINES 65
   COLUMNS 240
   PRINTFORMAT X_65_512/2
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   PRINTCOPIES 001
   BANNER D
   RUN DAILY EXCEPT MON
   RELEASE (RESUME.ARD002TR)
