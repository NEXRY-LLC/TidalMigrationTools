APPL FIM010 WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/*********************************************************************/
/*Automatic clearing of GL Open Items. Setup per Van McFarland. */
/*  09/05/2017 - MFM.  If problemss, contact SAP FI Group@bfusa.com*/
/*********************************************************************/

NOTIFY ABEND FAILURE ALERT(REMD)

JOB LIS.!ESPAPPL LINK PROCESS
   RUN 1ST DAY OF MONTH
   EARLYSUB 02.00
   RELEASE ADD(MONTHLY_CLEARING_GL_OPEN_ITEMS_1)
ENDJOB

SAP_JOB MONTHLY_CLEARING_GL_OPEN_ITEMS_1
   AGENT CYBB_BFP030
   SAPJOBNAME MONTHLY_CLEARING_GL_OPEN_ITEMS_1
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME SAPF124
   VARIANT 'CLR OI GL M 1'
   STEPUSER S_BC_CYBERM
   LANGUAGE E
   EXPIRATION 8
   LINES 65
   COLUMNS 153
   BANNER D
   RECIPIENT S_BC_CYBERM
   ARCMODE PRINT
   PRINTCOPIES 001
   RUN 1ST DAY OF MONTH
   RELEASE ADD(MONTHLY_CLEARING_GL_OPEN_ITEMS_2)
ENDJOB

