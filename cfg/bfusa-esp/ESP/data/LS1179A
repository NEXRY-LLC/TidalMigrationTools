APPL LS1179A WAIT

NOTIFY FAILURE ABEND ALERT(REMD)


JCLLIB 'FTRF.PRDJOBS'
COPYJCL 'SWS.ESP.COPYLIB'
TEMPLIB 'SWS.ESP.TEMPLIB'
DOCLIB 'SWS.ESP.DOCLIB'

IF !ESPAPSUB# > 1 THEN JCLLIB 'SWS.ESP.COPYLIB'

OPTIONS RESTARTSTEP

JOB LS1179A
  /*@@ SYSTEM=LS
  ENCPARM PREDICT DSNOTFOUND(NO)
  CCCHK RC(1:4095) FAIL CONTINUE
  /*@@ CALENDAR=EX
  /*@@ SCHIDS:  001
  RUN 1ST DAY OF MONTH
  DELAYSUB 06:00
  RELEASE ADD(LS1179CD)
  NOTWITH (ED372V01.-)
ENDJOB

JOB LS1179CD
  /*@@ SYSTEM=LS
  ENCPARM PREDICT DSNOTFOUND(NO)
  CCCHK RC(1:4095) FAIL CONTINUE
  /*@@ CALENDAR=EX
  RUN 1ST DAY OF MONTH
ENDJOB

