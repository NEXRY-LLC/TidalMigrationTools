APPL QAPERF WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/**********************************************************************/
/*10/18/2016-JFC-CONVERTED LIE JOB FROM MVS TO LINK                   */
/**********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND MAILBOX(QAFAIL)
TAG PPIW
CRITPATH ON

NT_JOB ITEM_MASTERCMD EXTERNAL APPLID(QAITMMST)
   RUN SUN
   RELEASE ADD(LIS.QAPERF)
ENDJOB

JOB LIS.QAPERF LINK PROCESS
   RUN SUN
   EARLYSUB 01.00
   RELEASE ADD(TIRE_PERF)
ENDJOB

NT_JOB TIRE_PERF
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\tire_perf.cmd
   ARGS
   USER maestro
   RUN SUN
   RELEASE ADD(TIRE_PERF_CHECKS)
   RELEASE ADD(TIRE_SPEED_GRP)
ENDJOB

NT_JOB TIRE_PERF_CHECKS
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\tire_perf_checks.cmd
   ARGS
   USER maestro
   RUN SUN
   RELEASE ADD(LIE.QAPERF)
ENDJOB

NT_JOB TIRE_SPEED_GRP
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\tire_speed_grp.cmd
   ARGS
   USER maestro
   RUN SUN
   RELEASE ADD(TIRE_SPEED_GRP_CHECKS)
   RELEASE ADD(TIRE_PLY_GRP)
ENDJOB

NT_JOB TIRE_SPEED_GRP_CHECKS
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\tire_speed_grp_checks.cmd
   ARGS
   USER maestro
   RUN SUN
   RELEASE ADD(LIE.QAPERF)
ENDJOB

NT_JOB TIRE_PLY_GRP
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\tire_ply_grp.cmd
   ARGS
   USER maestro
   RUN SUN
   RELEASE ADD(TIRE_PLY_GRP_CHECKS)
   RELEASE ADD(QA_PERF_CD)
ENDJOB

NT_JOB TIRE_PLY_GRP_CHECKS
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\tire_ply_grp_checks.cmd
   ARGS
   USER maestro
   RUN SUN
   RELEASE ADD(LIE.QAPERF)
ENDJOB

NT_JOB QA_PERF_CD
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\qa_perf_cd.cmd
   ARGS
   USER maestro
   RUN SUN
   RELEASE ADD(QA_PERF_CD_CHECKS)
