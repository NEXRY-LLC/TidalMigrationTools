NOTIFY ABEND FAILURE ALERT(REMD)
TAG 'OTC CRITICAL'

JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   RELEASE ADD(ZDELVWRAPSPLIT_PLE_IN_LED018PE)
   RELEASE ADD(ZSDLEI06_SHP_BLK_REASON_RMV_PE)
ENDJOB

SAP_JOB ZDELVWRAPSPLIT_PLE_IN_LED055PE EXTERNAL SCOPE(-5) +
   APPLID(LED055PE)
   RUN MON TUE WED THU
   IF TODAY('MON TUE WED THU') AND ESPSHH GT '06' THEN NORUN TODAY
   RELEASE ADD(ZDELVWRAPSPLIT_PLE_IN_LED018PE)
   RELEASE ADD(ZSDLEI06_SHP_BLK_REASON_RMV_PE)
ENDJOB

SAP_JOB ZDELVWRAPSPLIT_PLE_IN_LEW055PE EXTERNAL APPLID(LEW055PE) +
   SCOPE(-5)
   RUN FRI
   IF TODAY('FRI') AND ESPSHH GT '06' THEN NORUN TODAY
   RELEASE ADD(ZDELVWRAPSPLIT_PLE_IN_LED018PE)
   RELEASE ADD(ZSDLEI06_SHP_BLK_REASON_RMV_PE)
ENDJOB

SAP_JOB ZDELVWRAPSPLIT_PLE_IN_LED018PE
   AGENT CYBB_BFP030
   SAPJOBNAME ZDELVWRAPSPLIT_PLE
   SAPJOBCLASS A
   STARTMODE ASAP
   ABAPNAME ZDELVWRAPSPLIT
   VARIANT ZLESO_EST_SPLT
   STEPUSER SAPADM
   LANGUAGE E
   PRINTDEST CP21
   PRINTCOPIES 001
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   BANNER D
   RECIPIENT SAPADM
   ARCMODE PRINT
   RUN DAILY
   NOTWITH (ZSDLEI06_SHP_BLK_REASON_RMV_BLK.-)
   DUEOUT EXEC REALNOW PLUS 20 MINUTES
   NOTIFY OVERDUE MAILBOX(LED018XX)
   NOTIFY FAILURE ABEND ALERT(REMD)
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

SAP_JOB ZSDLEI06_SHP_BLK_REASON_RMV_PE
   AGENT CYBB_BFP030
   SAPJOBNAME ZSDLEI06_SHP_BLK_REASON_RMV_PE
   SAPJOBCLASS C
   STARTMODE ASAP
   ABAPNAME ZSDLEI06_SHP_BLK_REASON
   VARIANT ZLESO_EST_SPLT
   STEPUSER SAPADM
   LANGUAGE E
   PRINTDEST CP21
   EXPIRATION 8
   LINES 65
   COLUMNS 80
   BANNER D
   RECIPIENT SAPADM
   ARCMODE PRINT
   PRINTCOPIES 001
   RUN DAILY
   RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
   RUN DAILY
   DUEOUT EXEC NOW PLUS 1 HOURS
