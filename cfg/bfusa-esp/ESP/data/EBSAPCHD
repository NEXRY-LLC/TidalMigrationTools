NOTIFY ABEND FAILURE ALERT(REMP)

JOB LIS.!ESPAPPL LINK PROCESS
   RUN TODAY
   RELEASE ADD(EBSAPCHB_D_S02_FT)
ENDJOB

FILE_TRIGGER EBSAPCHB_D_S02_FT
   AGENT APPPLS02PAKR
   FILENAME 'D:\APPS\SAP\FILETRIGGER\EBSAPCHB_D*.TXT' CREATE
   RUN TODAY
   RELEASE ADD(EBSAPCHB_D_S02_BAT)
ENDJOB

NT_JOB EBSAPCHB_D_S02_BAT
    AGENT APPPLS02PAKR
    USER bsprintuser
    CMDNAME D:\APPS\SAP\START\EBSAPCHB_.BAT
    ENVAR STDOUT=D:\APPS\SAP\REPORTFILES\EBSAPCHB_.TXT
    RUN TODAY
    RELEASE ADD(EBSAPCHB_RPD_BAT)
ENDJOB

NT_JOB EBSAPCHB_RPD_BAT
    AGENT APPPLS01PAKR
    USER bsprintuser
    CMDNAME E:\APPS\SAP\START\EBSAPCHB_RPD.BAT
    ENVAR STDOUT=E:\APPS\SAP\REPORTFILES\EBSAPCHB_RPD.TXT
    RUN TODAY
    RELEASE ADD(FOURHOURDELAY.!ESPAPPL)
ENDJOB

JOB FOURHOURDELAY.!ESPAPPL LINK PROCESS
    RELDELAY 120
    RUN TODAY
    RELEASE ADD(EBSAPCHB_ZIPSEND_BAT)
ENDJOB

NT_JOB EBSAPCHB_ZIPSEND_BAT
    AGENT APPPLS02PAKR
    USER bsprintuser
    CMDNAME D:\APPS\SAP\START\EBSAPCHB_ZIPANDSEND.BAT
    ENVAR STDOUT=D:\APPS\SAP\REPORTFILES\EBSAPCHB_ZIPANDSEND.TXT
    RUN TODAY
    RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
    RUN TODAY
    RELDELAY 5
ENDJOB

APPLEND TRIGNEW1.!ESPAPPL
  ESPNOMSG TRIGGER !ESPEVENT ADD
ENDJOB

