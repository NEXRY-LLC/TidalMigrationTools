NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY OVERDUE MAILBOX(BRMDLY)
EXITCODE 0-1 SUCCESS

JOB LIS.!ESPAPPL LINK PROCESS
   RUN DAILY
   DELAYSUB 03.00
   RELEASE ADD(BRMDLYMNT.WRNPROD)
ENDJOB

AS400_JOB BRMDLYMNT.WRNPROD
  RESOURCE ADD(1,TAPMLB01) HOLD
   IF TODAY('APR 25 2016') THEN RESOURCE ADD(1,TAPMLB02) HOLD
  AGENT WRNPROD
  COMMAND CYBROBOT2 BRMDLYMNT
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
    DUEOUT EXEC 3.30
     IF TODAY('JUN 30 2014') THEN JOBATTR HOLD
  RELEASE ADD(BRMDLYSAVF.WRNPROD)
ENDJOB

AS400_JOB BRMDLYSAVF.WRNPROD
  AGENT WRNPROD
  COMMAND CYBROBOT2 BRMDLYSAVF
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
   DELAYSUB 04.15
    DUEOUT EXEC 04.45
  RELEASE ADD(BRMDLYVRT.WRNPROD)
ENDJOB

AS400_JOB BRMDLYVRT.WRNPROD
  AGENT WRNPROD
  COMMAND CYBROBOT2 BRMDLYVRT
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
   DELAYSUB 04.40
    DUEOUT EXEC 6.10
  RELEASE ADD(BRMDLYOFF.WRNPROD)
ENDJOB

AS400_JOB BRMDLYOFF.WRNPROD
  RESOURCE ADD(1,TAPMLB01) HOLD
   IF TODAY('APR 25 2016') THEN RESOURCE ADD(1,TAPMLB02) HOLD
  AGENT WRNPROD
  COMMAND CYBROBOT2 BRMDLYOFF
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
  RELDELAY 2
  IF TODAY('MAY 09 2015') THEN JOBATTR HOLD
  RELEASE ADD(BRMDLYRPT.WRNPROD)
  RELEASE ADD(BRMDLYONS.WRNPROD)
ENDJOB

AS400_JOB BRMDLYONS.WRNPROD REQUEST
  RESOURCE ADD(1,TAPMLB01) HOLD
  AGENT WRNPROD
  COMMAND CYBROBOT2 BRMDLYONS
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
  RELEASE ADD(BRMDLYRPT.WRNPROD)
ENDJOB

AS400_JOB BRMDLYRPT.WRNPROD
  AGENT WRNPROD
  COMMAND CYBROBOT2 BRMDLYRPT
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN DAILY
  RELEASE ADD(BRMEOM.WRNPROD)
ENDJOB

AS400_JOB BRMEOM.WRNPROD
  RESOURCE ADD(1,TAPMLB01) HOLD
  RELDELAY 2
  AGENT WRNPROD
  COMMAND CYBROBOT2 BRMEOM
  JOBQ CAWAAGENT.CYBESPJOBS
  RUN 1ST DAY OF MONTH
  RELEASE ADD(LIE.!ESPAPPL)
ENDJOB

JOB LIE.!ESPAPPL LINK PROCESS
  RUN DAILY
ENDJOB

