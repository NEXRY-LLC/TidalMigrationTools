APPL QAPRDDTL WAIT

INVOKE 'SWS.ESP.APPL.PROCLIB(#DISTRIB)'

/**********************************************************************/
/*10/18/2016-JFC-CONVERTED LIE JOB FROM MVS TO NT JOB                 */
/**********************************************************************/

NOTIFY FAILURE ABEND ALERT(REMD)
NOTIFY FAILURE ABEND MAILBOX(QAFAIL)
NOTIFY OVERDUE MAILBOX(SQLSHAREDSERVICES)
TAG PPIW
CRITPATH ON

NT_JOB PRODUCTION_CHECKS EXTERNAL APPLID(QAPRDCHK)
   RUN 2ND WORKDAY OF MONTH
   RELEASE (LIS.QAPRDDTL)
ENDJOB

NT_JOB ALL_SHIPMENTS_CHECKCMD EXTERNAL APPLID(QASHPMNT)
   RUN 2ND WORKDAY OF MONTH
   RELEASE (LIS.QAPRDDTL)
ENDJOB

NT_JOB WHSE_RECEIPTS_CHECKSCMD EXTERNAL APPLID(QAWHSERC)
   RUN 2ND WORKDAY OF MONTH
   RELEASE (LIS.QAPRDDTL)
ENDJOB

JOB LIS.QAPRDDTL LINK PROCESS
   RUN 2ND WORKDAY OF MONTH
   RELEASE (PRODUCTION_DETAIL_UPDATE)
ENDJOB

NT_JOB PRODUCTION_DETAIL_UPDATE
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\production_detail_update.cmd
   USER maestro
   RUN 2ND WORKDAY OF MONTH
   EARLYSUB 19.00
   RELEASE ADD(PRODUCTION_DETAIL_CHECKS)
ENDJOB

NT_JOB PRODUCTION_DETAIL_CHECKS
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\production_detail_checks.cmd
   USER maestro
   RUN 2ND WORKDAY OF MONTH
   RELEASE ADD(PRODUCTION_DETAIL_ROLLUP_CONSUMED)
ENDJOB

NT_JOB PRODUCTION_DETAIL_ROLLUP_CONSUMED
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\production_detail_rollup_consumed.cmd
   USER maestro
   RUN 2ND WORKDAY OF MONTH
     DUEOUT EXEC 23:00
   RELEASE ADD(LIE.QAPRDDTL)
ENDJOB

NT_JOB LIE.QAPRDDTL
   AGENT CYBA_PPIWPROD
   CMDNAME X:\cmd_scripts\LinkedInEnd.cmd
   USER maestro
   RUN 2ND WORKDAY OF MONTH
ENDJOB

